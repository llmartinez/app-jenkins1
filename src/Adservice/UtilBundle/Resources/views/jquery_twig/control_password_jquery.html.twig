                    <script>
                    $('#confirm_password').click(function(){
                        if($('#new_password1').val() == $('#new_password2').val())
                        {
                            if($('#new_password1').val().length >= 8){

                                var url = "{{ path('change_password', { 'id'      :  user.id      ,
                                                                        'password': 'plc_new_pass',
                                                                        'route'   : 'none',
                                                                        'old_pass': 'plc_old_pass' }) }}";

                                url = url.replace('plc_new_pass', $('#new_password1').val());
                                url = url.replace('plc_old_pass', $('#old_password' ).val());
                                window.open(url,'_self');
                            }
                            else alert("{% trans %} error.length_password {% endtrans %}")
                        }
                        else alert("{% trans %} error.same_password {% endtrans %}");
                    });
                </script>