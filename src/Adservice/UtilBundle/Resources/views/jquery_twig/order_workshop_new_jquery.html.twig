
    <script>
        $(document).ready(function() {

            {% if id_partner is iterable %}

                $('#workshopOrder_newOrder_partner').empty();

                {% for partner in id_partner %}

                    $('#workshopOrder_newOrder_partner').append(new Option("{{ partner.name }}", "{{ partner.id }}"));

                {% endfor %}
            {% else %}
                $('form').find('select[name*=partner]').val('{{ id_partner }}');
            {% endif %}

            var url_ajax = "{{ path("shops_from_partner") }}";
            populate_shop(url_ajax);

            //si clickamos el combobox de los socios rellenamos el de tiendas
            $('form').find('select[name*=partner]').change(function() {
                var url_ajax = "{{ path("shops_from_partner") }}";
                populate_shop(url_ajax);
            });
        });

    </script>