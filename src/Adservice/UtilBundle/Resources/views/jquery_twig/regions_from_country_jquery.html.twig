            {% if shopOrder     is defined %} {% set entity = shopOrder     %} {% endif %}
            {% if workshopOrder is defined %} {% set entity = workshopOrder %} {% endif %}

            // REGIONS FROM COUNTRY
            var url_ajax = "{{ path('regions_from_country') }}";
            var region   = "{{ entity.region }}";
            var city     = "{{ entity.city }}";
            if(region == "") region = 'none';
            populate_region(url_ajax, region, city);
        {% else %}
            populate_region(url_ajax);
        {% endif %}
            //si clickamos el combobox de los paises repoblamos la de las regiones
            $('form').find('select[name*=country]').change(function() {
               var url_ajax = "{{ path("regions_from_country") }}";
               populate_region(url_ajax);
            });
        });


