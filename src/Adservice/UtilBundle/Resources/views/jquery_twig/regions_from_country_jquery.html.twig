
    <script>
        $(document).ready(function(){

        {% if partner is defined or shop is defined or workshop is defined or user is defined or shopOrder is defined or workshopOrder is defined %}
            {% if partner       is defined %} {% set entity = partner       %} {% endif %}
            {% if shop          is defined %} {% set entity = shop          %} {% endif %}
            {% if workshop      is defined %} {% set entity = workshop      %} {% endif %}
