<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body style="color: #000000; margin: 0; font-family: Verdana, Geneva, sans-serif; background-color: #FFF;">
<table style="width:100%; height:50; border:0; color: #FFFFFF; font-family: Verdana, Geneva, sans-serif; font-size: 20px; font-weight: bold; background-color: #285e8e; text-align: center;">
    <tr><td width="100%" height="50" valign="middle">
        {% trans %} mail.rejectOrder.title {% endtrans %}
        {% if shopOrder.wantedAction == 'create'     %}{{'action.create'|trans|lower}}{% endif %}
        {% if shopOrder.wantedAction == 'activate'   %}{{'action.active'|trans|lower}}{% endif %}
        {% if shopOrder.wantedAction == 'deactivate' %}{{'action.inactive'|trans|lower}}{% endif %}
        {% if shopOrder.wantedAction == 'modify'     %}{{'action.modify'|trans|lower}}{% endif %}
        {{'shop'|trans|lower}}
    </td></tr>
</table>
<table style="width: 100%;border: 0;color: #000000;font-family: Verdana, Geneva, sans-serif;font-size: 12px;">
    <tr><td height="150" valign="middle" align="center">
        <img src="{% trans %} mail.image {% endtrans %}" alt="AD Service Ticketing" title="AD Service Ticketing" width="500" height="58" />
    </td></tr>

    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">

        {% if     shopOrder.modifiedBy.roles[0] == 'ROLE_ADMIN'    %} {% trans %} mail.rejectOrder.createdby {% endtrans %}
        {% elseif shopOrder.modifiedBy.roles[0] == 'ROLE_AD'     %} {% trans %} mail.rejectOrder.createdby.user  {% endtrans %}
        {% endif %}
    </td></tr>

    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        {% trans %} mail.rejectOrder.info {% endtrans %}"<b>{% trans %} menu.list_orders {% endtrans %}</b>".
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        {% trans %} mail.rejectOrder.info.id {% endtrans %}
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        <h2>{{ shopOrder.id }}</h2>
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        {% trans %} action {% endtrans %} {{'action.rejected'|trans|lower}}:
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        <h2>
        {% if shopOrder.wantedAction == 'create'     %}{{'action.create'|trans|lower}}{% endif %}
        {% if shopOrder.wantedAction == 'activate'   %}{{'action.active'|trans|lower}}{% endif %}
        {% if shopOrder.wantedAction == 'deactivate' %}{{'action.inactive'|trans|lower}}{% endif %}
        {% if shopOrder.wantedAction == 'modify'     %}{{'action.modify'|trans|lower}}{% endif %}
        {{'shop'|trans|lower}}
        </h2>
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        {% trans %} reason {% endtrans %}:
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        <h4>{{ shopOrder.rejectionReason|nl2br }}</h4>
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        <table>
            <h3>{% trans %} datashop {% endtrans %}:</h3>

            <tr><td valign="middle" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{% trans %} shop {% endtrans %}:</b></td><td> {{ shopOrder.name }}
            </td></tr>
            <tr><td valign="middle" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{% trans %} partner {% endtrans %}:</b></td><td> {{ shopOrder.partner }}
            </td></tr>
            <tr><td valign="middle" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{% trans %} tel {% endtrans %}:</b></td><td> {{ shopOrder.phoneNumber1 }}
            </td></tr>
            <tr><td valign="middle" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{% trans %} mail {% endtrans %}:</b></td><td> {{ shopOrder.Email1 }}
            </td></tr>
        </table>
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #285e8e; font-family: Verdana, Geneva, sans-serif; font-size: 14px; padding-top: 20px;">
        {% trans %} mail.info.more {% endtrans %} <a href="http://adserviceticketing.com">{% trans %} adserviceticketing.com {% endtrans %}</a>
    </td></tr>
</table>

<hr>

</table>
<table width="100%" border="0" cellspacing="5" cellpadding="0" style="background-color: #FFF;">
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #285e8e; font-family: Verdana, Geneva, sans-serif;">
        {% trans %} footerText {% endtrans %}
    </td></tr>
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #285e8e; font-family: Verdana, Geneva, sans-serif;">
        {% trans %} termsConditions {% endtrans %}
    </td></tr>
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #285e8e; font-family: Verdana, Geneva, sans-serif;">
        {% trans %} mail.textDisclaimer {% endtrans %}
    </td></tr>
</table>
</body>
</html>