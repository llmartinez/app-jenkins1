<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body style="color: #000000; margin: 0; font-family: Verdana, Geneva, sans-serif; background-color: #FFF;">
<table style="width:100%; height:50; border:0; color: #FFFFFF; font-family: Verdana, Geneva, sans-serif; font-size: 20px; font-weight: bold; background-color: #428bca; text-align: center;">
    <tr><td width="100%" height="50" valign="middle">

        {% set url_logo = route_logo_mail ~ '.png' %}
        <img src="{{ asset(url_logo) }}" style="height: 60px;">
        <br>
        {{ 'mail.editOrder.title'|trans }}
    </td></tr>
</table>
<table style="width: 100%;border: 0;color: #000000;font-family: Verdana, Geneva, sans-serif;font-size: 12px;">
    <tr><td height="150" valign="middle" align="center">
        {% if app.security.getToken().getUser() != "anon." and workshopOrder.categoryService != null %}
            {% set url_logo_catserv = route_logo_mail ~ '_' ~ workshopOrder.categoryService.slug ~ '.png' %}
            <img src="{{ asset(url_logo_catserv) }}" style="height: 60px;">
        {% endif %}
    </td></tr>

    <tr><td valign="middle" align="center" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">

        {% if     workshopOrder.modifiedBy.roles[0] == 'ROLE_ADMIN'    %} {{ 'mail.editOrder.createdby'|trans }}
        {% elseif workshopOrder.modifiedBy.roles[0] == 'ROLE_AD'     %} {{ 'mail.editOrder.createdby.user'|trans }}
        {% endif %}
    </td></tr>

    <tr><td valign="middle" align="center" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        {{ 'mail.editOrder.info'|trans|raw }}"<b>{{ 'menu.list_orders'|trans }}</b>".
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        {{ 'mail.editOrder.info.id'|trans }}
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        <h2>{{ workshopOrder.id }}</h2>
    </td></tr>
    <tr><td valign="middle" align="center" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
        <table>
            <h3>{{ 'dataworkshop'|trans }}:</h3>
            <tr><td valign="middle" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{{ 'code'|trans }}:</b></td><td> {{ workshopOrder.codepartner }} - {{ workshopOrder.codeworkshop }}
            </td></tr>
            <tr><td valign="middle" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{{ 'workshop'|trans }}:</b></td>
                {% if workshop.name != workshopOrder.name %}<td>
                    <a style="color: #428bca">{{ 'from'|trans }}</a> "{{ workshop.name }}"
                    <a style="color: #428bca">{{ 'to'|trans }}</a> "{{ workshopOrder.name }}"
                </td>
                {% else %} <td> {{ workshopOrder.name }}</td> {% endif %}
            </tr>
            <tr><td valign="middle" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{{ 'contact'|trans }}:</b></td>
                {% if workshop.contact != workshopOrder.contact %}<td>
                    <a style="color: #428bca">{{ 'from'|trans }}</a> "{{ workshop.contact }}"
                </td>
                <td>
                    <a style="color: #428bca">{{ 'to'|trans }}</a> "{{ workshopOrder.contact }}"
                </td>
                {% else %} <td> {{ workshopOrder.contact }}</td> {% endif %}
            </tr>
            <tr><td valign="middle" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{{ 'tel'|trans }}:</b></td>
                {% if workshop.phoneNumber1 != workshopOrder.phoneNumber1 %}<td>
                    <a style="color: #428bca">{{ 'from'|trans }}</a> "{{ workshop.phoneNumber1 }}"
                </td>
                <td>
                    <a style="color: #428bca">{{ 'to'|trans }}</a> "{{ workshopOrder.phoneNumber1 }}"
                </td>
                {% else %} <td> {{ workshopOrder.phoneNumber1 }}</td> {% endif %}
            </tr>
            <tr><td valign="middle" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                <b>{{ 'mail'|trans }}:</b></td>
                {% if workshop.Email1 != workshopOrder.Email1 %}<td>
                    <a style="color: #428bca">{{ 'from'|trans }}</a> "{{ workshop.Email1 }}"
                </td>
                <td>
                    <a style="color: #428bca">{{ 'to'|trans }}</a> "{{ workshopOrder.Email1 }}"
                </td>
                {% else %} <td> {{ workshopOrder.Email1 }}</td> {% endif %}

            </tr>
        </table>
            <tr><td valign="middle" align="center" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;">
                {% if workshopOrder.test == 1 %}
                    <b>{{ 'testing'|trans }}</b>
                {% endif %}
            </td></tr>
    </td></tr>
    {#<tr><td valign="middle" align="center" style="color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px; padding-top: 20px;">
        {{ 'mail.info.more'|trans }}
        <a href="https://adserviceticketing.com/{{__locale}}/help">{{ 'adserviceticketing.com'|trans }}/{{__locale}}/help</a>
    </td></tr>#}
</table>

<hr>

</table>
<table width="100%" border="0" cellspacing="5" cellpadding="0" style="background-color: #FFF;">
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #428bca; font-family: Verdana, Geneva, sans-serif;">
        {{ 'footerText'|trans }}
    </td></tr>
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #428bca; font-family: Verdana, Geneva, sans-serif;">
        {{ 'termsConditions'|trans }}
    </td></tr>
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #428bca; font-family: Verdana, Geneva, sans-serif;">
        {{ 'mail.textDisclaimer'|trans }}
    </td></tr>
</table>
</body>
</html>