<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body style="color: #000000; margin: 0; font-family: Verdana, Geneva, sans-serif; background-color: #FFF;">

<div style="margin-top: 50px;">

    {% set style = 'color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;' %}
    <div style="width: 100%; {{style}}">
        <table>
            <h3></h3>
            <th>{{ 'advanced_diagnostics'|trans }} ({{count_pending}})</th>
            {% for id in pending_tickets %}
                <tr><td valign="middle" style="{{style}}"><b>{{id}}</b></td></tr>
            {% endfor %}
        </table>
    </div>
    <hr>
    <hr>
    <div style="width: 100%; {{style}}">
        <table>
            <h3></h3>
            <th>{{ 'information'|trans }} ({{count_closed}})</th>
            {% for id in closed_tickets %}
                <tr><td valign="middle" style="{{style}}"><b>{{id}}</b></td></tr>
            {% endfor %}
        </table>
    </div>
    <hr>
    <hr>
    <div style="width: 100%; {{style}}">
        <table>
            <h3></h3>
            <th>{{ 'mail.inactivity_warning.title'|trans }} ({{count_warning}})</th>
            {% for id in warning_tickets %}
                <tr><td valign="middle" style="{{style}}"><b>{{id}}</b></td></tr>
            {% endfor %}
        </table>
    </div>
<div>

<hr>

<table width="100%" border="0" cellspacing="5" cellpadding="0" style="background-color: #FFF;">
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #428bca; font-family: Verdana, Geneva, sans-serif;">
        {{ 'footerText'|trans }}
    </td></tr>
</table>
</body>
</html>