<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body style="color: #000000; margin: 0; font-family: Verdana, Geneva, sans-serif; background-color: #FFF;">
<table style="width:100%; height:50; border:0; color: #FFFFFF; font-family: Verdana, Geneva, sans-serif; font-size: 20px; font-weight: bold; background-color: #428bca; text-align: center;">
    <tr><td width="100%" height="50" valign="middle">

        {% set css_style = "color: #428bca; font-family: Verdana, Geneva, sans-serif; font-size: 14px;" %}

        {% set url_logo = route_logo_mail ~ '.png' %}
        <img src="{{ asset(url_logo) }}" style="height: 60px;">
        <br>
        {{ 'mail.acceptOrder.title'|trans }}
        {% if action == 'create'     %}{{'action.create'|trans|lower}}{% endif %}
        {% if action == 'activate'   %}{{'action.active'|trans|lower}}{% endif %}
        {% if action == 'deactivate' %}{{'action.inactive'|trans|lower}}{% endif %}
        {% if action == 'modify'     %}{{'action.modify'|trans|lower}}{% endif %}
        {{'workshop'|trans|lower}}
    </td></tr>
</table>
<table style="width: 100%;border: 0;color: #000000;font-family: Verdana, Geneva, sans-serif;font-size: 12px;">
    <tr><td height="150" valign="middle" align="center">
        {% if app.security.getToken().getUser() != "anon." and workshop.categoryService != null %}
            {% set url_logo_catserv = route_logo_mail ~ '_' ~ workshop.categoryService.slug ~ '.png' %}
            <img src="{{ asset(url_logo_catserv) }}" style="height: 60px;">
        {% endif %}
    </td></tr>

    <tr><td valign="middle" align="center" style="{{css_style}}">
        {{ 'mail.acceptOrder.info'|trans|raw }}"<b>{{ 'menu.list_workshops'|trans }}</b>".
    </td></tr>
    <tr><td valign="middle" align="center" style="{{css_style}}">
        {{ 'mail.acceptOrder.info.id'|trans }}
    </td></tr>
    <tr><td valign="middle" align="center" style="{{css_style}}">
        <h2>{{ workshop.codePartner }} - {{ workshop.codeWorkshop }}</h2>
    </td></tr>
    <tr><td valign="middle" align="center" style="{{css_style}}">
        {{ 'action'|trans }} {{'action.accepted'|trans|lower}}:
    </td></tr>
    <tr><td valign="middle" align="center" style="{{css_style}}">
        <h2>
        {% if action == 'create'     %}{{'action.create'|trans|lower}}{% endif %}
        {% if action == 'activate'   %}{{'action.active'|trans|lower}}{% endif %}
        {% if action == 'deactivate' %}{{'action.inactive'|trans|lower}}{% endif %}
        {% if action == 'modify'     %}{{'action.modify'|trans|lower}}{% endif %}
        {{'workshop'|trans|lower}}
        </h2>
    </td></tr>
    <tr><td valign="middle" align="center" style="{{css_style}}">
        <table>
            <h3>{{ 'dataworkshop'|trans }}:</h3>

            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'workshop'|trans }}:</b></td><td> {{ workshop.name }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'code'|trans }}:</b></td><td> {{ workshop.codepartner }} - {{ workshop.codeworkshop }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'typology'|trans }}</b></td><td> {{ workshop.typology }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'address'|trans }}</b></td><td> {{ workshop.address }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'city'|trans }}</b></td><td> {{ workshop.city }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'region'|trans }}</b></td><td> {{ workshop.region }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'phone_number_1'|trans }}</b></td><td> {{ workshop.phoneNumber1 }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'phone_number_2'|trans }}</b></td><td> {{ workshop.phoneNumber2 }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'mobile_number_1'|trans }}</b></td><td> {{ workshop.mobileNumber1 }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'mobile_number_2'|trans }}</b></td><td> {{ workshop.mobileNumber2 }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'email_1'|trans }}</b></td><td> {{ workshop.email1 }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'email_2'|trans }}</b></td><td> {{ workshop.email2 }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'fax'|trans }}</b></td><td> {{ workshop.fax }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'contact'|trans }}</b></td><td> {{ workshop.contact }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'created_at'|trans }}</b></td><td> {{ workshop.createdAt|date("d/m/Y") }}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'update_at'|trans }}</b></td><td> {% if workshop.updateAt %}{{ workshop.updateAt|date("d/m/Y") }}{% endif %}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'lowdate_at'|trans }}</b></td><td> {% if workshop.lowdateAt %}{{ workshop.lowdateAt|date("d/m/Y") }}{% endif %}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'active'|trans }}</b></td><td> {% if workshop.active %}{{'yes'|trans }}{% else %}{{'no'|trans }}{% endif %}</td></tr>
            <tr><td valign="middle" style="{{css_style}}"><b>{{ 'observations'|trans }}</b></td><td>{{workshop.observationAdmin}}</td></tr>
        </table>
            <tr><td valign="middle" align="center" style="{{css_style}}">
                {% if workshop.test == 1 %}
                    <b>{{ 'testing'|trans }}</b>
                {% endif %}
            </td></tr>
    </td></tr>
    {#<tr><td valign="middle" align="center" style="{{css_style}} padding-top: 20px;">
        {{ 'mail.info.more'|trans }}
        <a href="https://adserviceticketing.com/{{__locale}}/help">{{ 'adserviceticketing.com'|trans }}/{{__locale}}/help</a>
    </td></tr>#}
</table>

<hr>

</table>
<table width="100%" border="0" cellspacing="5" cellpadding="0" style="background-color: #FFF;">
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #428bca; font-family: Verdana, Geneva, sans-serif;">
        {{ 'footerText'|trans }}
    </td></tr>
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #428bca; font-family: Verdana, Geneva, sans-serif;">
        {{ 'termsConditions'|trans }}
    </td></tr>
    <tr><td valign="bottom" align="center" style="font-size: 10px; color: #428bca; font-family: Verdana, Geneva, sans-serif;">
        {{ 'mail.textDisclaimer'|trans }}
    </td></tr>
</table>
</body>
</html>