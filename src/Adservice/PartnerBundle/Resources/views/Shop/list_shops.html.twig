{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">Home</a></li>
      <li class="active">List of Shops</li>
    </ol>

    <table class="table" style="width: 80%; margin-left: 10%;">
        <tr>
            <td align="right">
                <div class="input-group">
                    <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
                    <input class="form-control" id="system-search" name="q" placeholder="Filtrar por..." required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
                </br>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('shop_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-user"></span> Crear una tienda nueva</a>
                {% endif %}
            </td>
        </tr>
    </table>

    {% if shops|length > 0  %}
    <table class="table table-hover table-list-search" style="width: 80%; margin-left: 10%;">
        <thead>
            <tr>
                <th>#           </th>
                <th>Shop Name   </th>
                <th>Partner     </th>
                <th>Phone Number</th>
                <th>Email1      </th>
                <th>address     </th>
                <th>Actions     </th>
            </tr>
        </thead>
        <tbody>
                {% for shop in shops %}
            <tr>
                <td>{{ shop.id           }}</td>
                <td>{{ shop.partner      }}</td>
                <td>{{ shop.name         }} {% if shop.active == false %}<span class="label label-danger">Inactive</span>{% endif %}</td>
                <td>{{ shop.phoneNumber1 }}</td>
                <td>{{ shop.email1       }}</td>
                <td>{{ shop.address      }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a id="edit{{ shop.name }}" href="{{ path("shop_edit", { 'id':shop.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                        {% if shop.workshops|length == 0 %}
                            <a id="delete{{ shop.name }}" href="#"><span class="glyphicon glyphicon-trash" data-toggle="modal" data-target="#myModal" data-id="{{ shop.id }}"></span></a>
                        {% else %}
                            <a style="color:gray"><span class="glyphicon glyphicon-trash" title="La tienda tiene talleres asignados. Reasignalos para poder borrar." onclick="alert('La tienda tiene talleres asignados. Reasignalos para poder borrar.')"></span></a>
                        {% endif %}
                    </td>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabel">Eliminar Tienda</h4>
                                </div>
                                <div class="modal-body">
                                    Estas seguro que quieres eliminar esta tienda?
                                </div>
                                <div class="modal-footer">
                                    <a href="{{ path('shop_delete', {'id': 'foo'}) }}" class="btn btn-default" role="button">SI</a>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                {% elseif is_granted('ROLE_AD') %}
                    <td>
                        <a id="edit{{ shop.name }}" href="{{ path("shopOrder_edit", { 'id':shop.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                        {% if shop.workshops|length == 0 %}
                            <a id="delete{{ shop.name }}" href="#"><span class="glyphicon glyphicon-trash" data-toggle="modal" data-target="#myModal" data-id="{{ shop.id }}"></span></a>
                        {% else %}
                            <a style="color:gray"><span class="glyphicon glyphicon-trash" title="La tienda tiene talleres asignados. Reasignalos para poder borrar." onclick="alert('La tienda tiene talleres asignados. Reasignalos para poder borrar.')"></span></a>
                        {% endif %}
                    </td>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabel">Eliminar Tienda</h4>
                                </div>
                                <div class="modal-body">
                                    Estas seguro que quieres eliminar esta tienda?
                                </div>
                                <div class="modal-footer">
                                    <a href="{# {{ path('shopOrder_remove', {'id': 'foo'}) }} #}" class="btn btn-default" role="button">SI</a>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->
                    {% endif %}
            </tr>
                {% endfor %}
        </tbody>
    </table>
    {% include 'UtilBundle:Pagination:pagination_shop.html.twig' %}
{% else %}
No hay tiendas!!
{% endif %}


{% endblock%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/partner/js/partner.js') }}"></script>
    <script src="{{ asset('bundles/util/js/util.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('#MainContent').find('.glyphicon-trash').click(function() {
                var partner_id = $(this).data('id');
                confirm_delete_partner_modal(partner_id);
            })

            //util.js
            table_filter();
        });
    </script>
{% endblock %}