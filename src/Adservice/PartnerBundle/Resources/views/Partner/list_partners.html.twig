{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">Home</a></li>
      <li class="active">{% trans %} menu.list_partners {% endtrans %}</li>
    </ol>

<legend>
    {% trans %} menu.list_partners {% endtrans %}
    <a href="{{ path('partner_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-user"></span> Crear un partner nuevo </a>
</legend>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <div class="col-xs-3 col-md-3 form-group"> <label> {% trans %} country {% endtrans %} </label>
        <select id="flt_country" class='form-control'>
                <option value="none">All</option>
            {% for country in countries %}
                <option value="{{ country.id }}">{{ country }}</option>
            {% endfor %}
    </select></div>
    {% endif %}

    {% if all_partners|length > 0  %}
    <table class="table table-hover table-list-search" style="width: 80%; margin-left: 10%;">
        <thead>
            <tr>
                <th>#</th>
                <th>{% trans %} name            {% endtrans %}</th>
                <th>{% trans %} phone_number_1  {% endtrans %}</th>
                <th>{% trans %} email_1         {% endtrans %}</th>
                <th>{% trans %} region          {% endtrans %}</th>
                <th>{% trans %} address         {% endtrans %}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                {% for partner in all_partners %}
            <tr>
                <td>{{ partner.codePartner }}</td>
                <td>{{ partner.name }} {% if partner.active == false %}<span class="label label-danger">Inactive</span>{% endif %}</td>
                <td>{{ partner.phoneNumber1}}</td>
                <td>{{ partner.email1 }}</td>
                <td>{{ partner.region }}</td>
                <td>{{ partner.address }}</td>
                <td>
                    <a id="edit{{ partner.name }}" href="{{ path("partner_edit", { 'id':partner.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a id="delete{{ partner.name }}" href="#"><span class="glyphicon glyphicon-trash" data-toggle="modal" data-target="#myModal" data-id="{{ partner.id }}"></span></a>
                </td>
            </tr>
                {% endfor %}
        </tbody>
    </table>
    {% include 'UtilBundle:Pagination:pagination_partner.html.twig' %}
{% else %}
No hay socios!!
{% endif %}

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Eliminar Usuario</h4>
            </div>
            <div class="modal-body">
                Estas seguro que quieres eliminar este socio?
            </div>
            <div class="modal-footer">
                <a href="{{ path('partner_delete', {'id': 'foo'}) }}" class="btn btn-default" role="button">SI</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

{% endblock%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/partner/js/partner.js') }}"></script>
    <script src="{{ asset('bundles/util/js/util.js') }}"></script>

    <script>
        $(document).ready(function() {
            {% if country != 'none' %} $("#flt_country").val('{{ country }}');{% endif %}

            $('#MainContent').find('.glyphicon-trash').click(function() {
                var partner_id = $(this).data('id');
                confirm_delete_partner_modal(partner_id);
            })

        //REDIRIGE A LA PAGINA EN LA QUE SE HAYA HECHO CLICK
        $('#flt_country').click(function() {

            var country = $('#flt_country').val();

            if(country == null) country = 'none';

            var url     = "{{ path('partner_list', { 'page': 'plc_page', 'country': 'plc_country'}) }}";

            url = url.replace("plc_page", 1);
            url = url.replace("plc_country", country);

            window.open(url, "_self");
        });
            //util.js
            table_filter();
        });


    </script>
{% endblock %}