{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">{{ 'home'|trans }}</a></li>
      <li><a href="{{ path('partner_list') }}">{{ 'menu.list_partners'|trans }}</a></li>
      <li class="active">{{ 'edit.partner'|trans }} ({{ partner.name|length > 15 ? partner.name|slice(0, 15) ~ '...' : partner.name  }})</li>
    </ol>

    <legend>{{ 'edit.partner'|trans }}</legend>

    {{ form_start(form, {'action': path("partner_edit", { 'id':partner.id })}) }}

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-4 col-md-4 form-group">
                <label> {{ 'name'|trans }} *</label> {{ form_widget(form.name,{ 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            <div class="col-xs-2 col-md-2 form-group">
                <label>{{ 'code_partner'|trans }} *</label> {{ form_widget(form.code_partner,   { 'attr': {'class': 'form-control', 'min': 1 } }) }}
            </div>
            {% if catserv is defined %}
             <div class="col-xs-2 col-md-2 form-group">
                <label>{{ 'category_service'|trans }} *</label>
                <input type="text" class="form-control" value="{{catserv}}" disabled>
            </div>
            {% endif %}
            <div class="col-xs-2 col-md-2 form-group">
                <label>{{ 'cif'|trans }} *</label> {{ form_widget(form.cif, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            {% if is_granted('ROLE_ADMIN') and form.code_billing is defined %}
                <div class="col-xs-2 col-md-2 form-group">
                    <label>{{ 'code_billing'|trans }}</label> {{ form_widget(form.code_billing, { 'attr': {'class': 'form-control'} }) }}
                </div>
            {% endif %}
            <div class="col-xs-2 col-md-2 form-group">
                {% for flashMessage in app.session.flashbag.get('info' ) %}
                    {{ flashMessage }}
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <p style="color:red">{{flashMessage }}</p>
                {% endfor %}
            </div>
            <div class="col-xs-2 col-md-2 form-group">
                <label>{{ 'active'|trans }}     </label> {{ form_widget(form.active) }}
            </div>
        </div>

        <legend>{{ 'contact'|trans }}</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-12 col-md-12 form-group">

                <div class="col-xs-2 col-md-2 form-group">
                    <label>{{ 'contact'|trans }} *</label>
                    {{ form_widget(form.contact, { 'attr': {'class': 'form-control', 'placeholder': 'contact' | trans} }) }}
                </div>

                {% set entity = partner %}
                {% include 'UtilBundle:Default:contact_fields.html.twig' %}

                <div class="col-xs-4 col-md-4 form-group">
                    <label>{{ 'observations'|trans }}</label>
                    {{ form_widget(form.observations, { 'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'observations' | trans } }) }}
                </div>

                {{ form_rest(form) }}

                <div class="col-xs-8 col-md-8 form-group">
                    <button class="btn btn-primary pull-right" id="btn_create" type="submit"><img class="img_icon" src="{{ asset('bundles/util/images/icon/tick.png') }}"> {{ 'btn.edit'|trans }}</button>
                </div>
        </div>
            </div>
        </div>

    {{ form_end(form) }}

{#    WORKSHOPS ZONE#}
    {# {% include 'WorkshopBundle:Partner:_list.html.twig' with {'workshops' : partner.workshops} %} #}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/partner/js/partner.js') }}"></script>
{% endblock %}