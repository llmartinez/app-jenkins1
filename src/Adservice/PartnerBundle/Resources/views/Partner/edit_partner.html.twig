{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
      <li><a href="{{ path('partner_list') }}">{% trans %} menu.list_partners {% endtrans %}</a></li>
      <li class="active">{% trans %} edit.partner {% endtrans %} ({{ partner.name|length > 15 ? partner.name|slice(0, 15) ~ '...' : partner.name  }})</li>
    </ol>

    <legend>{% trans %} edit.partner {% endtrans %}</legend>

    <form action="{{ path("partner_edit", { 'id':partner.id }) }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-4 col-md-4 form-group">
                <label> {% trans %} name        {% endtrans %}*    </label> {{ form_widget(form.name,{ 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            <div class="col-xs-2 col-md-2 form-group">
                <label>{% trans %} code_partner {% endtrans %}*    </label> {{ form_widget(form.code_partner,   { 'attr': {'class': 'form-control', 'min': 1 } }) }}
            </div>
            <div class="col-xs-2 col-md-2 form-group">
                <label>{% trans %} cif         {% endtrans %}</label> {{ form_widget(form.cif, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            <div class="col-xs-4 col-md-4 form-group">
                {% if     app.session.hasFlash('info' ) %} {{ app.session.getFlash('info' ) }}
                {% elseif app.session.hasFlash('error') %} <p style="color:red">{{ app.session.getFlash('error') }}</p> {% endif %}
            </div>
            <div class="col-xs-2 col-md-2 form-group">
                <label>{% trans %} active       {% endtrans %}     </label> {{ form_widget(form.active) }}
            </div>
        </div>

        <legend>{% trans %} contact {% endtrans %}</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-12 col-md-12 form-group">

                <div class="col-xs-2 col-md-2 form-group">
                    <label>{% trans %} contact {% endtrans %} *</label>
                    {{ form_widget(form.contact, { 'attr': {'class': 'form-control', 'placeholder': 'contact' | trans} }) }}
                </div>

                {% set entity = partner %}
                {% include 'UtilBundle:Default:contact_fields.html.twig' %}

                <div class="col-xs-4 col-md-4 form-group">
                    <label>{% trans %} observations {% endtrans %}</label>
                    {{ form_widget(form.observations, { 'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'observations' | trans } }) }}
                </div>

                {{ form_rest(form) }}

                <div class="col-xs-8 col-md-8 form-group">
                    <button class="btn btn-primary pull-right" id="btn_create" type="submit"><img class="img_icon" src="{{ asset('bundles/util/images/icon/tick.png') }}"> {% trans %} btn.edit {% endtrans %}</button>
                </div>
        </div>
            </div>
        </div>




    </form>

{#    WORKSHOPS ZONE#}
    {# {% include 'WorkshopBundle:Partner:_list.html.twig' with {'workshops' : partner.workshops} %} #}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/partner/js/partner.js') }}"></script>
{% endblock %}