{% block javascripts %}
    
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/user.js') }}"></script>
    <script>
        $(document).ready(function(){
            $(window).load(function(){
                var first_time = localStorage['visited'];
                if (!first_time) {
                    localStorage['visited'] = false;
                    var url_ajax = "{{ path("popup_get") }}";
                    find_popup(url_ajax);
                }
            });
        });
    </script>

