{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
      {% if is_granted('ROLE_ADMIN') %}
        <li><a href="{{ path('user_list' ) }}">{% trans %} menu.list_users {% endtrans %}</a></li>
      {% else %}
        <li><a href="{{ path('user_partner_list' ) }}">{% trans %} menu.list_users {% endtrans %}</a></li>
      {% endif %}

      <li class="active">{% trans %} new.user {% endtrans %}</li>
    </ol>

    {% if error_username is defined %}<p class="alert label-danger">{{ error_username }}</p>{% endif %}

    <form action="{{ path('user_new',{ 'type':user_type}) }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="col-xs-12 col-md-12 form-group">
             <div class="col-xs-4 col-md-4 form-group">
                <label>{% trans %} username {% endtrans %}</label> {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'required': 'required', 'placeholder': 'name' | trans  } }) }}
                <label class="mt20">{% trans %} active {% endtrans %}</label> {{ form_widget(form.active, { 'attr': {'checked': 'checked'} }) }}
            </div>
             <div class="col-xs-4 col-md-4 form-group">
                <input type="hidden" id="pass_field1" value="{% trans %} password {% endtrans %}">
                <input type="hidden" id="pass_field2" value="{% trans %} repeat_password {% endtrans %}">
                {{ form_widget(form.password, { 'attr': { 'required': 'required' } }) }}
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                {% if not is_granted('ROLE_SUPER_ADMIN') %}
                    <div class="col-xs-2 col-md-2 form-group">
                        {% if user_type == "assessor" %}
                            <label> {% trans %} category_service {% endtrans %} </label>
                        {% else %}
                            <label>{% trans %} category_service {% endtrans %} *</label>
                        {% endif %}
                        <select  id="admin_assessor_type_category_service" name="admin_assessor_type_shoptype[category_service]" class="form-control">
                            <option value="0"></option>
                            <option value="{{ catserv.id }}">{{ catserv.CategoryService }}</option>
                        </select>
                    </div>
                    <div class="col-xs-2 col-md-2 form-group" hidden>
                        <label>{% trans %} category_service {% endtrans %} *</label> {{ form_widget(form.category_service, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                {% else %}
                    {% if form.category_service is defined %}
                        <div class="col-xs-2 col-md-2 form-group fl">
                            <label>{% trans %} category_service {% endtrans %} *</label> {{ form_widget(form.category_service, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    {% endif %}
                {% endif %}
            {% elseif is_granted('ROLE_AD') %}
                <div class="hidden"><input type="hidden" id="category_service_id" name="category_service_id" value="{{ catserv.CategoryService }}"></div>
            {% endif %}
            {% if form.partner is defined %}
             <div class="col-xs-2 col-md-2 form-group">
                {% if user_type == "super_ad" %}
                    <label>{% trans %} partner {% endtrans %}</label> {{ form_widget(form.partner, { 'attr': {'class': 'form-control' } }) }}
                {% else %}
                    <label>{% trans %} partner {% endtrans %} *</label> {{ form_widget(form.partner, { 'attr': {'class': 'form-control' , 'required': 'required'} }) }}
                {% endif %}
            </div>
            {% endif %}

            {% if form.shop is defined and user_type == "commercial" %}
                 <div class="col-xs-2 col-md-2 form-group">
                    <label>{% trans %} shop {% endtrans %}</label> {{ form_widget(form.shop, { 'attr': {'class': 'form-control'} }) }}
                </div>
            {% endif %}

            {% if form.workshop is defined %} {# DEPRECATED #}
            <div class="col-xs-2 col-md-2 form-group">
                <label>{% trans %} workshop {% endtrans %} *</label> {{ form_widget(form.workshop, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            {% endif %}
            <div class="col-xs-2 col-md-2 form-group">

                {% if user_type == "assessor" %}
                    <label> {% trans %} service_country {% endtrans %} *</label> {{ form_widget(form.country_service,  { 'attr': {'class': 'form-control'} }) }}
                {% endif %}

                <label>{% trans %} language {% endtrans %} *</label>
                {{ form_widget(form.language, { 'attr': {'class': 'form-control'} }) }}

                {% if form.charge is defined %} {# DEPRECATED #}
                <label>{% trans %} charge {% endtrans %} *</label> {{ form_widget(form.charge, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
                {% endif %}
            </div>
        </div>

        <legend>{% trans %} contact {% endtrans %}</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-12 col-md-12 form-group">
                <div class="col-xs-2 col-md-2 form-group">
                    <label> {% trans %} contact         {% endtrans %} *</label> {{ form_widget(form.name,    { 'attr': {'class': 'form-control'} }) }}
                                                                                 {{ form_widget(form.surname, { 'attr': {'class': 'form-control'} }) }}
                </div>
            {% include 'UtilBundle:Default:contact_fields.html.twig' %}

            {{ form_rest(form) }}

                <button class="btn btn-primary pull-right" id="confirm">
                    <img class="img_icon" src="{{ asset('bundles/util/images/icon/tick.png') }}">{% trans %} btn.create {% endtrans %}
                </button>
                <button class="btn btn-primary pull-right" id="btn_create" type="submit" style="display:none;"></button>
            </div>
        </div>
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/user.js') }}"></script>
    <script src="{{ asset('bundles/util/js/catserv.js') }}"></script>

    <script>
        $('#confirm').click(function(){

            var confirm = false;
            var catserv = $("select[id*='category_service']").val();

            if(catserv != '') {
                if(catserv != undefined){
                    event.preventDefault();
                    confirm = window.confirm("{% trans %} btn.confirm_catservice {% endtrans %}: "
                                            + $("select[id*='category_service'] option[value="+catserv+"]").text());
                }else{
                    var catserv = $("#category_service_id").val();
                    event.preventDefault();
                    confirm = window.confirm("{% trans %} btn.confirm_catservice {% endtrans %}: "+ catserv);
                }
            }

            if(confirm) $('#btn_create').click();
        });
    </script>
{% endblock %}