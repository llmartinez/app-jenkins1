{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}"> {% trans %} home {% endtrans %} </a></li>
      <li><a href="{{ path('user_list' ) }}"> {% trans %} menu.list_users {% endtrans %} </a></li>
      <li class="active"> {% trans %} edit.user {% endtrans %} ({{ user }}) </li>
    </ol>

    <form action="{{ path("user_edit", { 'id':user.id }) }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >
            {{ form_errors(form) }}
             <div class="col-xs-4 col-md-4 form-group">
                <label>{% trans %} username {% endtrans %} *</label>
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            {% if form.partner is defined %}
             <div class="col-xs-4 col-md-4 form-group">
                <label>{% trans %} partner {% endtrans %} *</label>
                {{ form_widget(form.partner, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            {% endif %}
            {% if form.workshop is defined %}
             <div class="col-xs-4 col-md-4 form-group">
                <label>{% trans %} workshop {% endtrans %} *</label>
                {{ form_widget(form.workshop, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
            </div>
            {% endif %}
            <div class="col-xs-2 col-md-2 form-group">
                <label>{% trans %} active {% endtrans %}</label>
                {{ form_widget(form.active) }}
            </div>

            <div class="col-xs-2 col-md-2 form-group">
                <label>{% trans %} language {% endtrans %}</label>
                {{ form_widget(form.language, { 'attr': {'class': 'form-control'} }) }}
            </div>
             <div class="col-xs-4 col-md-4 form-group">
                {% if user.roles[0] != 'ROLE_ADMIN' %}
                   <button class="btn btn-primary pull-left" data-toggle="modal" data-target="#myModal" data-id="{{ user.id }}">{% trans %} change_password {% endtrans %}</button>
                   <br><br>{% if app.session.hasFlash('password' ) %} {{ app.session.getFlash('password') }} {% endif %}
                {% endif %}
            </div>

        <legend>{% trans %} contact {% endtrans %}</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-2 col-md-2 form-group">
                <label> {% trans %} contact         {% endtrans %}*</label> {{ form_widget(form.name,    { 'attr': {'class': 'form-control'} }) }}
                                                                            {{ form_widget(form.surname, { 'attr': {'class': 'form-control'} }) }}
            </div>
        {% include 'UtilBundle:Default:contact_fields.html.twig' %}

        {{ form_rest(form) }}

            <button id="btn_save" type="submit">{% trans %} btn.edit {% endtrans %}</button>
        </div>
    </form>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">{% trans %} change_password {% endtrans %}</h4>
                </div>
                <div class="modal-body">
                   <p> {% trans %} change_password.confirm {% endtrans %} </p>
                </div>
                <div class="modal-footer">
                    <button id="confirm_password" type="button" class="btn btn-default" role="button">{% trans %} yes {% endtrans %}</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %} no {% endtrans %}</button>
                    <script>
                        $('#confirm_password').click(function(){

                            var url = "{{ path('change_password', {'id': user.id, 'password': 'PLACEHOLDER', 'route': 'user_edit' }) }}";
                            url = url.replace('PLACEHOLDER', 'none');
                            window.open(url,'_self');
                        });
                    </script>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/user.js') }}"></script>

    {% include 'UtilBundle:jquery_twig:regions_from_country_jquery.html.twig' %}

    {% include 'UtilBundle:jquery_twig:select2_region_jquery.html.twig' %}
    {% include 'UtilBundle:jquery_twig:select2_city_jquery.html.twig' %}
{% endblock %}