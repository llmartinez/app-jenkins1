{% extends '::layout.html.twig' %}

{% block body %}

<ol class="breadcrumb">
      <li class="active">{% trans %} home {% endtrans %}</li>
    </ol>

    {% if app.security.getToken().getUser().getCategoryService().getId() is defined %}
