                                                                                                            {% trans %} menu.list_typologies    {% endtrans %}</a>
            <a class="btn-menu" id="user_list"              href="{{ path("user_list"              ) }}">
                                                                                                            <img class="img_icon" src="{{ asset('bundles/util/images/icon/menu_users.png') }}">
