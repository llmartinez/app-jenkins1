{% extends '::layout.html.twig' %}

{% block body %}
    {# Definicion de la ruta al listado para usar en paginacion #}
    {% set route = 'category_service_list' %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">{{ 'home'|trans }}</a></li>
      <li class="active">{{ 'menu.list_categories'|trans }}</li>
    </ol>

    <div style="width: 90%; margin-left: 5%;">
        <legend>{{ 'menu.list_categories'|trans }}
            <a id="newCategoryService" href="{{ path('category_service_new') }}" class="btn btn-primary"><img class="img_icon" src="{{ asset('bundles/util/images/icon/add.png') }}"> {{ 'new.category_service'|trans }}</a></td>
        </legend>
    </div>
    {% if categories|length > 0  %}

        <table class="table table-hover table-list-search" style="width: 90%; margin-left: 5%;">
            <thead>
                <tr>
                    <th>{{ 'id'|trans }}</th>
                    <th>{{ 'category_service'|trans }}</th>
                    <th>{{ 'email'|trans }}</th>
                    <th>{{ 'actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr>
                    <td>{{ category.id       }}</td>
                    <td>{{ category.categoryService     }}</td>
                    <td>{{ category.email    }}</td>
                    <td>
                        <a href="{{ path("category_service_edit", { 'id':category.id }) }}"><img class="img_icon" src="{{ asset('bundles/util/images/icon/pencil.png') }}"> </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% include 'UtilBundle:Pagination:pagination.html.twig' %}
    {% else %}
        {{ 'any.category_service'|trans }}
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="{{ asset('bundles/util/js/util.js') }}"></script>
    <script src="{{ asset('bundles/util/js/pagination.js') }}"></script>

{% endblock %}