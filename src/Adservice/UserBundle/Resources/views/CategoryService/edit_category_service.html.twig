{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{{ 'home'|trans }}</a></li>
        <li><a href="{{ path('category_service_list') }}">{{ 'menu.list_categories'|trans }}</a></li>
        <li class="active">{{ 'edit.category_service'|trans }}</li>
    </ol>

    <form action="{{ path("category_service_edit", {'id': category.id}) }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="container">
            <legend>{{ 'category_service'|trans }}</legend>

            <div class="col-xs-12 col-md-12 form-group">
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <p class="error">{{ flashMessage }}</p>
                {% endfor %}
            </div>

            <div class="col-xs-12 col-md-12 form-group">
                <div class="col-xs-6 col-md-6 form-group">
                    <label for="adservice_userbundle_categoryservicetype_category_service">{{ 'category_service'|trans }}</label>
                    {{ form_widget(form.category_service, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-xs-6 col-md-6 form-group">
                    <label for="adservice_userbundle_categoryservicetype_email">{{ 'email'|trans }}</label>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="col-xs-12 col-md-12 form-group">
                <div class="col-xs-4 col-md-4 form-group">
                    <label for="adservice_userbundle_categoryservicetype_dis">{{ 'dis'|trans }}</label>
                    {{ form_widget(form.dis, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-xs-4 col-md-4 form-group">
                    <label for="adservice_userbundle_categoryservicetype_vts">{{ 'vts'|trans }}</label>
                    {{ form_widget(form.vts, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="col-xs-4 col-md-4 form-group">
                    <label for="adservice_userbundle_categoryservicetype_slug"> Slug </label>
                    {{ form_widget(form.slug, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary pull-right" id="btn_create" type="submit"><img class="img_icon" src="{{ asset('bundles/util/images/icon/tick.png') }}"> {{ 'btn.send'|trans }}</button>
        </div>
    </form>

{% endblock %}
