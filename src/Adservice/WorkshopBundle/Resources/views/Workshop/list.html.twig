{% extends '::layout.html.twig' %}

{% block body %}
    {# Definicion de la ruta al listado para usar en paginacion #}
    {% set route = 'workshop_list' %}
    {% if app.user.getCategoryService().getId() is defined %}
               {% set id_catserv = app.user.getCategoryService().getId() %}
    {% else %} {% set id_catserv = '0' %}
    {% endif %}
    <input type="hidden" id="route" name="route" value="{{ route }}">

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">{{ 'home'|trans }}</a></li>
      <li class="active">{{ 'menu.list_workshops'|trans }}</li>
    </ol>

    <div style="width: 90%; margin-left: 5%;">

        <legend>{{ 'menu.list_workshops'|trans }}
            {% if is_granted('ROLE_TOP_AD') %}
                <a id="newWorkshop" href="{{ path('workshop_new') }}" class="btn btn-primary"><img class="img_icon" src="{{ asset('bundles/util/images/icon/add.png') }}"> {{ 'new.workshop'|trans }}</a></td>
            {% endif %}
            <span class="pull-right mr15">{{ 'menu.list_workshops'|trans }}: {{length}}</span>
        </legend>

        {% for flashMessage in app.session.flashbag.get('alert') %}
            <p class="alert">{{ flashMessage }}</p>
        {% endfor %}

        <input type="hidden" id="code_numeric" name="code_numeric" value="{{ 'code_numeric'|trans }}">
        <input type="hidden" id="code_partner" name="code_partner" value="{{ 'code_partner'|trans }}">
        <div class="grid w15">
            <label style="width: 100%;">    {{ 'code'|trans }} <a id="lbl_code" style="color:red"></a></label>
            <input type="text" id="w_idpartner" name="w_idpartner" class="btn50 floating form-control" style="width: 50%;" placeholder="{{ 'partner'|trans }}">
            <input type="text" id="w_id"        name="w_id"        class="btn50 floating form-control" style="width: 50%;" placeholder="{{ 'workshop'|trans }}">
        </div>

        {% if is_granted('ROLE_TOP_AD') %}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="grid w10 form-group pd0"> <label> {{ 'country'|trans }} </label>
                    <select id="flt_country" class='form-control'>
                            <option value="0">{{ 'all'|trans }}</option>
                        {% for country in countries %}
                            <option value="{{ country.id }}">{{ country | trans }}</option>
                        {% endfor %}
                </select></div>
            {% endif %}
          {% if not is_granted('ROLE_SUPER_ADMIN') %}
              <div class="grid w15 form-group pd0">
                  <label> {{ 'category_service'|trans }} </label>
                  <select disabled id="slct_catserv" class="form-control"> 

                      <option value="{{ catser.id }}">{{ catser.CategoryService }}</option>

                  </select>
              </div>
        
          {% else %}
              <div class="grid w15 form-group pd0">
                <label> {{ 'category_service'|trans }} </label>
                <select id="slct_catserv" class="form-control"> <option value="0">...</option>
                    {% for _catserv in cat_services %}
                        <option value="{{ _catserv.id }}"{% if _catserv is defined and catserv == _catserv.id %} selected {% endif %}>{{ _catserv }}</option>
                    {% endfor %}
                </select>
            </div>
          {% endif %}
      
            <div class="grid w10 form-group pd0"> <label> {{ 'partner'|trans }} </label>
                <select id="flt_partner" class='form-control'>
                        <option value="0">{{ 'all'|trans }}</option>
                    {% for partner in partners %}
                        <option value="{{ partner.id }}">{{ partner.codePartner }} - {{ partner | trans }}</option>
                    {% endfor %}
            </select></div>

            <div class="grid w10 form-group pd0"> <label> {{ 'status'|trans }} </label>
                <select id="flt_status" class='form-control'>
                    <option value="0"        >{{ 'all'|trans }}</option>
                    <option value="active"   >{{ 'active'|trans }}</option>
                    <option value="deactive" >{{ 'inactive'|trans }}</option>
                    <option value="test"     >{{ 'test'|trans }}</option>
                    <option value="check"    >{{ 'haschecks'|trans }}</option>
                    <option value="infotech" >{{ 'infotech'|trans }}</option>
                 </select>
            </div>

            <div class="grid w30 form-group pd0">
                <div class="col-xs-6 col-md-6 form-group" style="margin-left: -15px;">
                    <label> {{ 'find_by'|trans }} </label>
                    <select id="flt_search_term" name="flt_search_term" class='form-control'>
                        <option value="tel"  {% if term == 'tel'  %}selected{% endif %}>{{ 'tel'|trans }}</option>
                        {% if is_granted('ROLE_TOP_AD') and not is_granted('ROLE_ADMIN') and app.user.getCategoryService().getId() is defined and app.user.getCategoryService().getId() == 3 %}
                            <option value="name" {% if term == 'name' %}selected{% endif %}>{{ 'social_reason'|trans }}</option>
                        {% else %}
                            <option value="name" {% if term == 'name' %}selected{% endif %}>{{ 'workshop_name'|trans }}</option>
                        {% endif %}
                        <option value="mail" {% if term == 'mail' %}selected{% endif %}>{{ 'email'|trans }}</option>
                        <option value="cif"  {% if term == 'cif'  %}selected{% endif %}>{{ 'cif'|trans }}</option>
                        <option value="postal_code"  {% if term == 'postal_code'  %}selected{% endif %}>{{ 'postal_code'|trans }}</option>
                        <option value="city"  {% if term == 'city'  %}selected{% endif %}>{{ 'city'|trans }}</option>
                     </select>
                </div>
                <div class="col-xs-5 col-md-5 form-group" style="margin-top: 21px;margin-left: -25px;">
                    <input type="text" id="flt_search_field" name="flt_search_field" class='form-control' placeholder="{{ 'value'|trans }}" value="{% if field != '0' %}{{ field }}{% endif %}">
                </div>
                <div class="col-xs-1 col-md-1 form-group" style="margin-left:-16px;">
                    <a type="button" id="btn_search_field" name="btn_search_field" class='btn btn-primary' style="margin-top:20px;margin-left:-20px;"><img class="img_icon" src="{{ asset('bundles/util/images/icon/search_btn.png') }}"></a>
                </div>
            </div>

        {% endif %}
    </div>
    {% include 'WorkshopBundle:Workshop:_list.html.twig'  %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/util/js/pagination.js') }}"></script>
    <script src="{{ asset('bundles/workshop/js/workshop_filter.js') }}"></script>
    <script>
        $(document).ready(function() {
            {% if country != '0' %} $("#flt_country").val('{{ country }}');{% endif %}
            {% if partner != '0' %} $("#flt_partner").val('{{ partner }}');{% endif %}
            {% if status  != '0' %} $("#flt_status" ).val('{{ status }}' );{% endif %}
        });
    </script>
{% endblock %}