{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">Home</a></li>
        <li class="active">Apply for new workshop</li>
    </ol>

    <h1>Listado de talleres </h1>

    {% if workshops|length > 0  %}
        <table class="table table-hover table-list-search" style="width: 80%; margin-left: 10%;">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Workshop Name</th>
                    <th>Partner</th>
                    <th>Address</th>
                    <th>Email1</th>
                    <th>Phone number 1</th>
                    <th>Active</th>
                    <th>Up Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for workshop in workshops %}
                    <tr>
                        <td>{{ workshop.id }}</td>
                        <td>{{ workshop.name }} {% if workshop.active == false %}<span class="label label-danger">Inactive</span>{% endif %}</td>
                        <td>{{ workshop.partner}}</td>
                        <td>{{ workshop.address }}</td>
                        <td>{{ workshop.email1 }}</td>
                        <td>{{ workshop.phoneNumber1 }}</td>
                        <td>{{ workshop.active }}</td>
                        <td>{{ workshop.updateAt | date('d-m-Y')}}</td>
                        <td>
                            <a title="Modificar datos del taller"           href="{{ path('workshopOrder_createModifyOrder',       {'id':workshop.id                       }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                            {% if workshop.active == true %}
                                <a title="Solicitar desactivación del taller"   href="{{ path('workshopOrder_createChangeStatusOrder', {'id':workshop.id, 'status':'inactive'  }) }}"><span class="glyphicon glyphicon-remove"></span></a>
                            {% else %}
                                <a title="Solicitar activación del taller"      href="{{ path('workshopOrder_createChangeStatusOrder', {'id':workshop.id, 'status':'active'    }) }}"><span class="glyphicon glyphicon-ok"></span></a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        No hay talleres!!
    {% endif %}
        
{% endblock %}