{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">Home</a></li>
        <li class="active">Apply for new workshop</li>
    </ol>

    {% if user_role == 'admin' %}
        <h1>Solicitudes pendientes</h1>
    {% elseif user_role == 'ad'%}
        <h1>Listado de solicitudes de {{ user.partner}} </h1>
    {% endif %}
    
    <table class="table" style="width: 50%; margin-left: 450px;">
        <tr>
            <td align="right">
               <div class="input-group">
                    <input class="form-control" id="system-search" name="q" placeholder="Filtrar por..." required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </td>
        </tr>
    </table>
    
    {% if workshopsOrders is defined %}
        {% if workshopsOrders|length > 0  %}
            <table class="table table-hover table-list-search" style="width: 50%; margin-left: 450px;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Workshop</th>
                        <th>Partner</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Region</th>
                        <th>Province</th>
                        <th>City</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for workshop in workshopsOrders %}
                        <tr>
                            <td>{{ workshop.id }}</td>
                            <td>{{ workshop.name }}</td>
                            <td>{{ workshop.partner }}</td>
                            <td>{{ workshop.address}}</td>
                            <td>{{ workshop.phoneNumber1 }}</td>
                            <td>{{ workshop.region }}</td>
                            <td>{{ workshop.province }}</td>
                            <td>{{ workshop.city }}</td>
                            <td>
                                {% if ((workshop.action == 'modify') or (workshop.action == 're_modify')) %}
                                    (Modificación pendiente)
                                {% elseif workshop.action == 'activate' %}
                                    (Activación pendiente)
                                {% elseif workshop.action == 'deactivate' %}
                                    (Desactivación pendiente)
                                {% endif %}
                            </td>
                            {% if user_role == 'admin' %}
                                <td>
                                    <a title="Aceptar la activación del taller"  href="{{ path("workshopOrder_change_status", { 'id': workshop.idWorkshop, 'status': 'activate'   })  }}"><span class="glyphicon glyphicon-ok"></span></a>
                                    <a title="Rechazar la activación del taller" href="{{ path("workshopOrder_change_status", { 'id': workshop.idWorkshop, 'status': 'deactivate' }) }}"><span class="glyphicon glyphicon-remove"></span></a>
                                </td>
                            {% else %}
                                <td>
                                    <a title="Modificar datos de la solicitud" href="{{ path('workshopOrder_new', {'id' : workshop.idWorkshop, 'action' : 're_modify'})}}"><span class="glyphicon glyphicon-pencil"></span></a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            No hay talleres!!
        {% endif %}
    {% endif %}
       
{% endblock %}
            
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/util/js/util.js') }}"></script>
    <script>
        $(document).ready(function() {
            //util.js
            table_filter();//util.js
        });
    </script>
{% endblock %}