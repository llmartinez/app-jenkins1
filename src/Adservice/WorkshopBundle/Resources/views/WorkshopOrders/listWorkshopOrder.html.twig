{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">Home</a></li>
        <li class="active">Apply for new workshop</li>
    </ol>

    {% if user_role == 'admin' %}
        <h1>Solicitudes pendientes</h1>
    {% elseif user_role == 'ad'%}
        <h1>Listado de solicitudes de {{ user.partner}} </h1>
    {% endif %}
    
    <table class="table" style="width: 50%; margin-left: 450px;">
        <tr>
            <td align="right">
               <div class="input-group">
                    <input class="form-control" id="system-search" name="q" placeholder="Filtrar por..." required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </td>
        </tr>
    </table>
    
    {% if workshopsOrders is defined %}
        {% if workshopsOrders|length > 0  %}
            <table class="table table-hover table-list-search" style="width: 50%; margin-left: 450px;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Workshop</th>
                        <th>Partner</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Region</th>
                        <th>Province</th>
                        <th>City</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for workshop in workshopsOrders %}
                        <tr>
                            <td>{{ workshop.id }}</td>
                            <td>{{ workshop.name }}</td>
                            <td>{{ workshop.partner }}</td>
                            <td>{{ workshop.address}}</td>
                            <td>{{ workshop.phoneNumber1 }}</td>
                            <td>{{ workshop.region }}</td>
                            <td>{{ workshop.province }}</td>
                            <td>{{ workshop.city }}</td>
                            <td>
                                {% if ((workshop.action == 'modify') or (workshop.action == 're_modify')) %}
                                    <span class="label label-warning"> {% trans %} Modification {% endtrans %}</span>
                                    <a title="Ver detalles del taller" href="#"><span class="glyphicon glyphicon-eye-open" data-toggle="modal" data-target="#myModal" ></span></a>
                                    <a title="{{ workshop.rejectionReason }}" href="#"><span class="glyphicon glyphicon-fire" style="color: red;"></span></a>
                                    
                                
                                    <!-- Modal -->
                                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="myModalLabel">Workshop Details</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <b>Name:</b> {{ workshop.name }}<br/>
                                                    <b>Num AD Client:</b> {{ workshop.numAdClient }}<br/>
                                                    <b>Cif:</b> {{ workshop.cif }}<br/>
                                                    <b>Address:</b> {{ workshop.address }}<br/>
                                                    <b>City:</b> {{ workshop.city }}<br/>
                                                    <b>Phone Number</b> {{ workshop.phoneNumber1 }} / {{ workshop.phoneNumber2 }}<br/>
                                                    <b>Movile Number</b> {{ workshop.movilePhone1}} / {{ workshop.movilePhone1 }}<br/>
                                                    <b>Fax</b> {{ workshop.fax }}<br/>
                                                    <b>Email:</b> {{ workshop.email1 }} / {{ workshop.email2 }}<br/>
                                                    <b>Region:</b> {{ workshop.region }}<br/>
                                                    <b>Province:</b> {{ workshop.province }}<br/>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                                </div>
                                            </div><!-- /.modal-content -->
                                        </div><!-- /.modal-dialog -->
                                    </div><!-- /.modal -->


                                {% elseif workshop.action == 'activate' %}
                                    <span class="label label-danger"> {% trans %} Inactive {% endtrans %}</span>
                                    <span class="glyphicon glyphicon-arrow-right"></span>
                                    <span class="label label-success"> {% trans %} Active {% endtrans %}</span>
                                {% elseif workshop.action == 'deactivate' %}
                                    <span class="label label-success"> {% trans %} Active {% endtrans %}</span>
                                    <span class="glyphicon glyphicon-arrow-right"></span>
                                    <span class="label label-danger"> {% trans %} Inactive {% endtrans %}</span>
                                {% endif %}
                            </td>
                            {% if user_role == 'admin' %}
                                <td>
                                    <a title="Aceptar"  href="{{ path("workshopOrder_change_status", { 'id': workshop.id, 'status': 'accepted'   })  }}"><span class="glyphicon glyphicon-ok"></span></a>
                                    <a title="Rechazar" href="{{ path("workshopOrder_change_status", { 'id': workshop.id, 'status': 'rejected' }) }}"><span class="glyphicon glyphicon-remove"></span></a>
                                </td>
                            {% else %}
                                <td>
                                    {% if workshop.action == 'activate' or workshop.action == 'deactivate' %}
                                        <a title="Cancelar la activación / desactivación" href="{{ path('workshopOrder_new', {'id' : workshop.idWorkshop, 'action' : 'canceled'})}}"><span class="glyphicon glyphicon-remove"></span></a>
                                    {% else %}
                                        <a title="Modificar datos de la solicitud" href="{{ path('workshopOrder_new', {'id' : workshop.idWorkshop, 'action' : 're_modify'})}}"><span class="glyphicon glyphicon-pencil"></span></a>
                                    {% endif %}
                                </td>
                            {% endif %}
                        </tr>
                        
                        
                        
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            No hay talleres!!
        {% endif %}
    {% endif %}
            
   
       
{% endblock %}
            
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/util/js/util.js') }}"></script>
    <script>
        $(document).ready(function() {
            //util.js
            table_filter();//util.js
        });
    </script>
{% endblock %}