{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">Home</a></li>
        <li><a href="{{ path('workshop_list') }}">list of Workshops</a></li>
        <li class="active">New Workshop</li>
    </ol>

    {% if app.session.hasFlash('error') %}
        <p class="error">{{ app.session.getFlash('error') }}</p>
    {% endif %}

    <form action="{{ path('workshop_new') }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="container">
                <legend>Workshop</legend>

        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_name">Name</label>
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_cif">CIF</label>
            {{ form_widget(form.cif, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_typology">Typology</label>
            {{ form_widget(form.typology, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_partner">Partner</label>
            {{ form_widget(form.partner, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_shop">Shop</label>
            {{ form_widget(form.shop, { 'attr': {'class': 'form-control', 'required': 'false'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="new_car_form_vin">Code Workshop</label>
            {{ form_widget(form.code_workshop, { 'attr': { 'class': 'form-control',
                                                           'placeholder': 'code Workshop'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            {% if     app.session.hasFlash('info' ) %} {{ app.session.getFlash('info' ) }}
            {% elseif app.session.hasFlash('error') %} <p style="color:red">{{ app.session.getFlash('error') }}</p> {% endif %}
            <br><br><br>
        </div>

        <div class="col-xs-4 col-md-4 form-group">
            <div class="col-xs-12 col-md-12 form-group">
                <label for="adservice_workshopbundle_workshoptype_active">Active</label>
                {{ form_widget(form.active) }}
            </div>
            <div class="col-xs-3 col-md-3 form-group">
                <label for="adservice_workshopbundle_workshoptype_test">Test</label>
                {{ form_widget(form.test) }}
            </div>
            <div class="col-xs-9 col-md-9 form-group">
                <label for="adservice_workshopbundle_workshoptype_endtest_at">Endtest at</label>
                {{ form_widget(form.endtest_at) }}
            </div>
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_diagnosis_machines">Diagnosis machines</label>
            {{ form_widget(form.diagnosis_machines, { 'attr': {'class': 'form-control', 'required': 'false'} }) }}
        </div>

        <legend>Contact</legend>

        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_contact">Contact</label>
            {{ form_widget(form.contact_name, { 'attr': {'class': 'form-control'} }) }}
            {{ form_widget(form.contact_surname, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_phone_number_1">Phone Number 1</label>
            {{ form_widget(form.phone_number_1, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_phone_number_2">Phone Number 2</label>
            {{ form_widget(form.phone_number_2, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_movile_number_1">Movile Phone 1</label>
            {{ form_widget(form.movile_number_1, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_movile_number_2">Movile Phone 2</label>
            {{ form_widget(form.movile_number_2, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_fax">Fax</label>
            {{ form_widget(form.fax, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="col-xs-5 col-md-5 form-group">
            <label for="adservice_workshopbundle_workshoptype_email_1">Email 1</label>
            {{ form_widget(form.email_1, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-5 col-md-5 form-group">
            <label for="adservice_workshopbundle_workshoptype_email_2">Email 2</label>
            {{ form_widget(form.email_2, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_country">Country</label>
            {{ form_widget(form.country, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_region">Region</label>
            {{ form_widget(form.region, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_province">Province</label>
            {{ form_widget(form.province, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-2 col-md-2 form-group">
            <label for="adservice_workshopbundle_workshoptype_city">City</label>
            {{ form_widget(form.city, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_address">Address</label>
            {{ form_widget(form.address, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <legend>Observations</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <label for="adservice_workshopbundle_workshoptype_conflictive">Conflictive</label>
            {{ form_widget(form.conflictive) }}
        </div>

        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_observation_workshop">Observation Workshop</label>
            {{ form_widget(form.observation_workshop, { 'attr': {'class': 'form-control', 'rows': '3'} }) }}
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_observation_assessor">Observation Assessor</label>
            {{ form_widget(form.observation_assessor, { 'attr': {'class': 'form-control', 'rows': '3'} }) }}
        </div>
        <div class="col-xs-4 col-md-4 form-group">
            <label for="adservice_workshopbundle_workshoptype_observation_admin">Observation Admin</label>
            {{ form_widget(form.observation_admin, { 'attr': {'class': 'form-control', 'rows': '3'} }) }}
        </div>

    {{ form_rest(form) }}
            <button id="btn_create" type="submit">Create</button>
        </div>
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {#  Se deberia tener un partner.js con la misma funcion que user.js?????  #}
<script src="{{ asset('bundles/workshop/js/workshop.js') }}"></script> 

<script>
    $(document).ready(function() {
        //si clickamos el combobox de las regiones repoblamos la de las provincias
        $('form[name=adservice_workshopbundle_workshoptype]').find('select[name*=region]').change(function() {
            var url_ajax = "{{ path("user_provinces") }}";
            populate_province(url_ajax);
        });
    });
</script>
{% endblock %}