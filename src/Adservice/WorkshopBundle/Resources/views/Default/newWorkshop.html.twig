{% extends '::layout.html.twig' %}

{% block body %}

        <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">Home</a></li>
      <li><a href="{{ path('workshop_list') }}">list of Workshops</a></li>
      <li class="active">New Workshop</li>
    </ol>

    <form action="{{ path('workshop_new') }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >
        {{ form_rest(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {#  Se deberia tener un partner.js con la misma funcion que user.js?????  #}
    <script src="{{ asset('bundles/workshop/js/workshop.js') }}"></script> 
    
    <script>
        $(document).ready(function(){
            //si clickamos el combobox de las regiones repoblamos la de las provincias
            $('form[name=adservice_workshopbundle_workshoptype]').find('select[name*=region]').change(function (){
                var url_ajax = "{{ path("user_provinces") }}";
                populate_province(url_ajax);
            });
        });
    </script>
{% endblock %}