{% extends '::layout.html.twig' %}

{% block body %}

<table class="table" style="width: 50%; margin-left: 450px;">
    <tr>
        <td align="right"><a href="{{ path('workshop_new') }}" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-user"></span> Crear un workshop nuevo</a></td>
    </tr>
</table>

{% if all_workshops|length > 0  %}
    <table class="table table-hover" style="width: 70%; margin-left: 290px;">
        <thead>
            <tr>
                <th>#</th>
                <th>Workshop Name</th>
                <th>Partner</th>
                <th>Address</th>
                <th>Email1</th>
                <th>Phone number 1</th>
                <th>Observations</th>
                <th>Active</th>
                <th>Ad Service +</th>
                <th>Up Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for workshop in all_workshops %}
            <tr>
                <td>{{ workshop.id }}</td>
                <td>{{ workshop.name }} </td>
                <td>{{ workshop.partner}}</td>
                <td>{{ workshop.address }}</td>
                <td>{{ workshop.email1 }}</td>
                <td>{{ workshop.phoneNumber1 }}</td>
                <td>{{ workshop.observations }}</td>
                <td>{{ workshop.active }}</td>
                <td>{{ workshop.adservicePlus }}</td>
                <td>{{ workshop.updateAt | date('Y-m-d')}}</td>
                <td>
                    <a href="{{ path("workshop_edit", { 'id':workshop.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="#"><span class="glyphicon glyphicon-trash" data-toggle="modal" data-target="#myModal" data-id="{{ workshop.id }}"></span></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    No hay socios!!
{% endif %}

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Eliminar Usuario</h4>
            </div>
            <div class="modal-body">
                Estas seguro que quieres eliminar este taller?                    
            </div>
            <div class="modal-footer">
                <a href="{{ path('workshop_delete', {'id': 'foo'}) }}" class="btn btn-default" role="button">SI</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

{% endblock%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/workshop/js/workshop.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('#MainContent').find('.glyphicon-trash').click(function() {
                var user_id = $(this).data('id');
                confirm_delete_user_modal(user_id);
            })
        });
    </script>
{% endblock %}