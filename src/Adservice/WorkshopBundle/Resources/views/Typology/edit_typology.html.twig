{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
        <li><a href="{{ path('typology_list') }}">{% trans %} menu.list_typologies {% endtrans %}</a></li>
        <li class="active">{% if typology.name != '' %}{% trans %} edit.typology {% endtrans %} ({{ typology.name|length > 15 ? typology.name|slice(0, 15) ~ '...' : typology.name  }})
                           {% else                   %}{% trans %} new.typology  {% endtrans %} {% endif %}</li>
    </ol>

    <form action="{{ path("typology_edit", { 'id':typology.id }) }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="container">
            <legend>{% trans %} typology {% endtrans %}</legend>

            <div class="col-xs-12 col-md-12 form-group">
                {% if app.session.hasFlash('error') %}
                    <p class="error">{{ app.session.getFlash('error') }}</p>
                {% endif %}
            </div>

            <div class="grid w30 fl">
                <label for="adservice_workshopbundle_typologytype_name">{% trans %} name {% endtrans %} *</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'name' | trans } }) }}
            </div>

           {# <div class="grid w15 fl">
                <label for="adservice_workshopbundle_typologytype_country">{% trans %} country {% endtrans %} *</label>
                {{ form_widget(form.country, { 'attr': {'class': 'form-control'} }) }}
            </div>#}

            {% if form.category_service is defined %}
             <div class="grid w15 fl">
                <label>{% trans %} category_service {% endtrans %} *</label> {{ form_widget(form.category_service, { 'attr': {'class': 'form-control' , 'required': 'required'} }) }}
            </div>
            {% endif %}

            <div class="grid w15 fl">
                <label for="adservice_workshopbundle_typologytype_active">{% trans %} active {% endtrans %}</label>
                {{ form_widget(form.active) }}
            </div>

            {{ form_rest(form) }}

            <button class="btn btn-primary pull-right" id="btn_create" type="submit"><img class="img_icon" src="{{ asset('bundles/util/images/icon/tick.png') }}"> {% trans %} btn.send {% endtrans %}</button>
        </div>
    </form>

{% endblock %}