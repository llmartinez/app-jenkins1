{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
        <li class="active">{% trans %} new.order.workshop {% endtrans %}</li>
    </ol>

    <h1>{% trans %} new.order.workshop {% endtrans %}</h1>

    <form action="{{ path('workshopOrder_new') }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="col-xs-12 col-md-12 form-group">
            {% if     app.session.hasFlash('info' ) %} {{ app.session.getFlash('info' ) }}
            {% elseif app.session.hasFlash('error') %} <p style="color:red">{{ app.session.getFlash('error') }}</p> {% endif %}
        </div>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-2 col-md-2">
                <label>{% trans %} workshop {% endtrans %}</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control',
                                                     'placeholder': 'name' | trans } }) }}
            </div>
            <div class="col-xs-2 col-md-2">

                <label>{% trans %} code_workshop {% endtrans %}</label> {{ form_widget(form.code_workshop,   { 'attr': {'class': 'form-control', 'min': '1', 'required':'required' } }) }}
                <input type="hidden" id="code" name="code" value="{{ code }}">
            </div>
            {% if is_granted('ROLE_SUPER_AD') %}
                <div class="col-xs-2 col-md-2 form-group">
                    <label for="workshopOrder_newOrder_partner">{% trans %} partner {% endtrans %} * </label>
                    {% if partners is iterable %}
                        <select id="partner" name="partner" required="required" class="form-control">
                            {% for partner in partners %}
                                <option value={{ partner.id }}>{{ partner.name }}</option>
                            {% endfor %}
                        </select>
                    {% else %}
                        <select id="partners"><option value=0>0</option></select>
                    {% endif %}
                </div>
            {# {% else %} {{ form_widget(form.partner, { 'attr': {'hidden': 'hidden' } }) }} #}
            {% endif %}

            <div class="col-xs-2 col-md-2">
                <label>{% trans %} shop {% endtrans %} </label> {{ form_widget(form.shop,            { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="col-xs-2 col-md-2">
                <label>{% trans %} typology {% endtrans %} </label> {{ form_widget(form.typology,        { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="col-xs-2 col-md-2">
                <label>{% trans %} cif {% endtrans %} * </label>
                {{ form_widget(form.cif, { 'attr': {'class': 'form-control',
                                                     'placeholder': 'cif' | trans } }) }}
            </div>
            <div class="col-xs-2 col-md-2">
                <label>{% trans %} test {% endtrans %} </label> {{ form_widget(form.test) }}
            </div>
        </div>

        <legend>{% trans %} contact {% endtrans %}</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-2 col-md-2 form-group">
                <label> {% trans %} contact         {% endtrans %} </label> {{ form_widget(form.contact_name,    { 'attr': {'class': 'form-control'} }) }}
                                                                             {{ form_widget(form.contact_surname, { 'attr': {'class': 'form-control'} }) }}
            </div>
            {% include 'UtilBundle:Default:contact_fields.html.twig' %}

            <input type="hidden" id="id_partner" value="{{ id_partner }}">
            <div hidden="hidden">
                {% if partners is iterable %}
                    <select id="partners">
                        {% for partner in partners %}
                            <option value={{ partner.id }}>{{ partner.name }}</option>
                        {% endfor %}
                    </select>
                {% else %}
                    <select id="partners"><option val="0">0</option></select>
                {% endif %}
            </div>

            {{ form_rest(form) }}

        <div class="col-xs-12 col-md-12 form-group">
            <button class="btn btn-primary pull-right" id="btn_create" type="submit">{% trans %} btn.create {% endtrans %}</button>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/order/js/order_workshop.js') }}"></script>
    <script src="{{ asset('bundles/order/js/order.js') }}"></script>
{% endblock %}
