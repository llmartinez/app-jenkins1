{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
        <li class="active">{% trans %} new.order.workshop {% endtrans %}</li>
    </ol>

    <h1>{% trans %} new.order.workshop {% endtrans %}</h1>

    <form action="{{ path('workshopOrder_new') }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="container">
            <div class="col-xs-2 col-md-2">
                <label>{% trans %} workshop {% endtrans %}</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control',
                                                     'placeholder': 'name' | trans } }) }}
            </div>
            <div class="col-xs-2 col-md-2">
                <label>{% trans %} cif {% endtrans %}</label>
                {{ form_widget(form.cif, { 'attr': {'class': 'form-control',
                                                     'placeholder': 'cif' | trans } }) }}
            </div>

            {% if is_granted('ROLE_SUPER_AD') %}
                <div class="col-xs-2 col-md-2 form-group">
                    <label for="adservice_partnerbundle_shoptype">{% trans %} partner {% endtrans %} * </label>
                    {{ form_widget(form.partner, { 'attr': {'class': 'form-control' } }) }}
                </div>
            {% else %} {{ form_widget(form.partner, { 'attr': {'hidden': 'hidden' } }) }}
            {% endif %}

            <div class="col-xs-2 col-md-2">
                <label>{% trans %} shop {% endtrans %} </label> {{ form_widget(form.shop,            { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="col-xs-2 col-md-2">
                <label>{% trans %} typology {% endtrans %} </label> {{ form_widget(form.typology,        { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="col-xs-2 col-md-2">

                <label>{% trans %} code.workshop {% endtrans %}</label> {{ form_widget(form.code_workshop,   { 'attr': {'class': 'form-control', 'min': '1', 'required':'required' } }) }}

                {% if     app.session.hasFlash('info' ) %} {{ app.session.getFlash('info' ) }}
                {% elseif app.session.hasFlash('error') %} <p style="color:red">{{ app.session.getFlash('error') }}</p> {% endif %}
            </div>

        <legend>{% trans %} contact {% endtrans %}</legend>

        <div class="col-xs-2 col-md-2 form-group">
            <label> {% trans %} contact         {% endtrans %} *</label> {{ form_widget(form.contact_name,    { 'attr': {'class': 'form-control'} }) }}
                                                                         {{ form_widget(form.contact_surname, { 'attr': {'class': 'form-control'} }) }}
        </div>
        {% include 'UtilBundle:Default:contact_fields.html.twig' %}

        {{ form_rest(form) }}

        <div class="col-xs-10 col-md-10 form-group">
            <button id="btn_create" type="submit">{% trans %} btn.create {% endtrans %}</button>
        </div>
    </form>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {% include 'UtilBundle:jquery_twig:regions_from_country_jquery.html.twig' %}
    {% include 'UtilBundle:jquery_twig:select2_region_jquery.html.twig' %}
    {% include 'UtilBundle:jquery_twig:select2_city_jquery.html.twig' %}

{% endblock %}