{% extends '::layout.html.twig' %}

{% block body %}

    {% if app.security.getToken().getUser().getCategoryService().getId() is defined %}
               {% set id_catserv = app.security.getToken().getUser().getCategoryService().getId() %}
    {% else %} {% set id_catserv = '0' %}
    {% endif %}
    {% if id_catserv == 1 or id_catserv == 2 or id_catserv == 3 %}
        {% set is_hidden = '' %}
    {% else %}
        {% set is_hidden = 'hidden' %}
    {% endif %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
        <li class="active">{% trans %} new.order.workshop {% endtrans %}</li>
    </ol>

    <h1>{% trans %} new.order.workshop {% endtrans %}</h1>

    <form action="{{ path('workshopOrder_new') }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="col-xs-12 col-md-12 form-group">
            <input type="hidden" id="exist_cif" value="{% trans %}workshop.cif_exist{% endtrans %} ">
            <div class="error_cif"></div>
            {% if     app.session.hasFlash('info' ) %} {{ app.session.getFlash('info' ) }}
            {% elseif app.session.hasFlash('error') %} <p style="color:red">{{ app.session.getFlash('error') }}</p> {% endif %}
        </div>

        <div class="col-xs-10 col-md-10 form-group fl">
            <div class="col-xs-3 col-md-3">
                <label>{% trans %} workshop {% endtrans %} *</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control',
                                                     'placeholder': 'workshop' | trans } }) }}
            </div>
            {% if is_granted('ROLE_SUPER_AD') %}
                <div class="col-xs-3 col-md-3 form-group">
                    <label for="workshopOrder_newOrder_partner">{% trans %} partner {% endtrans %} * </label>
                    {% if partners is iterable %}
                        <select id="partner" name="partner" required="required" class="form-control">
                            <option value></option>
                            {% for partner in partners %}
                                <option value={{ partner.id }}>{{ partner.name }}</option>
                            {% endfor %}
                        </select>
                    {% else %}
                        <select id="partners"><option value=0>0</option></select>
                    {% endif %}
                </div>
            {# {% else %} {{ form_widget(form.partner, { 'attr': {'hidden': 'hidden' } }) }} #}
            {% endif %}

            {% if id_catserv != 3 %}
                <div class="col-xs-3 col-md-3">
                    <label>{% trans %} shop {% endtrans %} * </label> {{ form_widget(form.shop, { 'attr': {'class': 'form-control', 'required': 'false'} }) }}
                </div>
            {% endif %}

            <div class="col-xs-3 col-md-3">
                <label>{% trans %} typology {% endtrans %} *</label> {{ form_widget(form.typology, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="col-xs-3 col-md-3">
                <label>{% trans %} cif {% endtrans %}</label>
                {{ form_widget(form.cif, { 'attr': {'class': 'form-control',
                                                     'placeholder': 'cif' | trans } }) }}
            </div>
        </div>
        <div class="col-xs-2 col-md-2 form-group fr">
            {% if id_catserv != 3 %}
            <div class="w65 fl mb15 {{is_hidden}}">
                <label>{% trans %} ad_service_plus {% endtrans %}</label>
            </div>
            <div class="w35 fr mb15 {{is_hidden}}">
                {{ form_widget(form.ad_service_plus) }}
            </div>
            {% endif %}
            <div class="w65 fl mb15">
                <label>{% trans %} test {% endtrans %}</label>
            </div>
            <div class="w35 fr mb15">
                {{ form_widget(form.test) }}
            </div>
            <div class="w65 fl ">
                <label for="workshopOrder_newOrder_haschecks">{% trans %} haschecks {% endtrans %}</label>
            </div>
            <div class="w35 fr ">
                {{ form_widget(form.haschecks) }}
            </div>
            <div class="w65 fl mb15">
                <label for="workshopOrder_newOrder_numchecks">{% trans %} numchecks {% endtrans %}</label>
            </div>
            <div class="w35 fr mb15">
                {{ form_widget(form.numchecks, { 'attr': {'class': 'form-control', 'min': '0'}}) }}
            </div>
            {% if id_catserv != 3 %}
            <div class="w65 fl {{is_hidden}}">
                <label for="workshopOrder_newOrder_infotech">{% trans %} infotech {% endtrans %}</label>
            </div>
            <div class="w35 fr {{is_hidden}}">
                {{ form_widget(form.infotech) }}
            </div>
            {% endif %}
        </div>
        <div class="col-xs-10 col-md-10 form-group fl">
            <div class="col-xs-3 col-md-3">

                <label>{% trans %} code_workshop {% endtrans %} *</label> {{ form_widget(form.code_workshop,   { 'attr': {'class': 'form-control', 'min': '1', 'required':'required' } }) }}
                <input type="hidden" id="code" name="code" value="{{ code }}">
            </div>
            <div class="col-xs-3 col-md-3">  
                {% if id_catserv != 3 %} {% set lbl_internal_code = 'internal_code'|trans %}
                {% else               %} {% set lbl_internal_code = 'Siret' %}{% endif %}

                <label>{{ lbl_internal_code }}</label>
                {{ form_widget(form.internal_code, { 'attr': {'class': 'form-control', 'placeholder': lbl_internal_code } }) }}
            </div>
            <div class="col-xs-3 col-md-3" {% if id_catserv == 3 %} hidden {% endif %}>
                <label>{% trans %} commercial_code {% endtrans %}</label>
                {{ form_widget(form.commercial_code, { 'attr': {'class': 'form-control', 'placeholder': 'commercial_code' | trans } }) }}
            </div>
            <div class="col-xs-3 col-md-3">
                <label>{% trans %} diagnosis_machines {% endtrans %} *</label> {{ form_widget(form.diagnosis_machines, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <legend>{% trans %} contact {% endtrans %}</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-2 col-md-2 form-group">
                <label>{% trans %} contact {% endtrans %} *</label> {{ form_widget(form.contact, { 'attr': {'class': 'form-control', 'placeholder': 'contact' | trans} }) }}
            </div>
            {% include 'UtilBundle:Default:contact_fields.html.twig' %}

            <input type="hidden" id="id_partner" value="{{ id_partner }}">
            <div hidden="hidden">
                {% if partners is iterable %}
                    <select id="partners">
                        {% for partner in partners %}
                            <option value={{ partner.id }}>{{ partner.name }}</option>
                        {% endfor %}
                    </select>
                {% else %}
                    <select id="partners"><option val="0">0</option></select>
                {% endif %}
            </div>

            {{ form_rest(form) }}

        <div class="col-xs-12 col-md-12 form-group">
            <button class="btn btn-primary pull-right" id="btn_create" type="submit">{% trans %} btn.create {% endtrans %}</button>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/order/js/order_workshop.js') }}"></script>
    <script src="{{ asset('bundles/order/js/order.js') }}"></script>
{% endblock %}
