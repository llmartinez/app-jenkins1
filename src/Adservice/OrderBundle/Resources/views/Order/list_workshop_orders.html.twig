                                                                                                           <td>{{ workshopOrder.mobileNumber1 }}</td></tr>
                                                    <tr><td>{% trans %} mobile_number_2 {% endtrans %}</td><td>{{ orderBefore.mobileNumber2   }}</td>
                                                                                                           <td>{{ workshopOrder.mobileNumber2 }}</td></tr>
                                                    <tr><td>{% trans %} fax             {% endtrans %}</td><td>{{ orderBefore.fax             }}</td>
