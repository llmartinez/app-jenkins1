                                                                                                           <td>{{ workshopOrder.typology      }}</td></tr>
                                                    <tr><td>{% trans %} contact         {% endtrans %}</td><td>{{ orderBefore.contact         }}</td>
                                                                                                           <td>{{ workshopOrder.contact       }}</td></tr>
                                                    <tr><td>{% trans %} phone_number_1  {% endtrans %}</td><td>{{ orderBefore.phoneNumber1    }}</td>
                                                                                                           <td>{{ workshopOrder.phoneNumber1  }}</td></tr>
