{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
        <li class="active">{% trans %} edit.order.shop {% endtrans %}</li>
    </ol>

    <h1>{% trans %} edit.order.shop {% endtrans %} <b>{{ shop.id }}</b></h1>

    <form action="#" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="col-xs-12 col-md-12 form-group">
                       
            <div class="col-xs-12 col-md-12 form-group">
                <div class="col-xs-4 col-md-4 form-group">
                    <label for="adservice_partnerbundle_shoptype">{% trans %} name {% endtrans %} *</label>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'required': 'required', 'placeholder': 'name' | trans } }) }}
                </div>
                <div class="col-xs-2 col-md-2 form-group">
                    <label for="adservice_partnerbundle_shoptype">{% trans %} partner {% endtrans %} * </label>
                    {{ form_widget(form.partner, { 'attr': {'class': 'form-control' } }) }}
                </div>
                <div class="col-xs-2 col-md-2 form-group">
                    <label>{% trans %} code_shop {% endtrans %} *</label> {{ form_widget(form.code_shop, { 'attr': {'class': 'form-control', 'min': 1, 'value': shopOrder.codeShop } }) }}
                </div>
                <div class="col-xs-2 col-md-2 form-group">
                    <label>{% trans %} cif         {% endtrans %} *</label> {{ form_widget(form.cif, { 'attr': {'class': 'form-control', 'required': 'required' } }) }}
                </div>
                <div class="col-xs-2 col-md-2 form-group">
                    <label for="adservice_partnerbundle_shoptype">{% trans %} active {% endtrans %}</label>
                    {{ form_widget(form.active, { 'attr': {'checked': 'checked' } }) }}
                </div>
            </div>
            {% if is_granted('ROLE_SUPER_AD') %}
                <div class="col-xs-2 col-md-2 form-group">
                    <label for="adservice_partnerbundle_shoptype">{% trans %} partner {% endtrans %} * </label>
                    {{ form_widget(form.partner, { 'attr': {'class': 'form-control' } }) }}
                </div>
            {% else %} {{ form_widget(form.partner, { 'attr': {'hidden': 'hidden' } }) }}
            {% endif %}
            <div class="col-xs-4 col-md-4 form-group">
                {% if     app.session.hasFlash('info' ) %} {{ app.session.getFlash('info' ) }}
                {% elseif app.session.hasFlash('error') %} <p style="color:red">{{ app.session.getFlash('error') }}</p> {% endif %}
            </div>
        </div>

         <legend>{% trans %} contact {% endtrans %}</legend>

        <div class="col-xs-12 col-md-12 form-group">
            <div class="col-xs-12 col-md-12 form-group">
                <div class="col-xs-2 col-md-2 form-group">
                    <label>{% trans %} contact {% endtrans %}</label>
                    {{ form_widget(form.contact, { 'attr': {'class': 'form-control', 'placeholder': 'contact' | trans} }) }}
                </div>
                {% include 'UtilBundle:Default:contact_fields.html.twig' %}
            </div>

            {{ form_rest(form) }}

            <div class="col-xs-10 col-md-10 form-group">
                <button class="btn btn-primary pull-right" id="btn_create" type="submit"><img class="img_icon" src="{{ asset('bundles/util/images/icon/tick.png') }}"> {% trans %} btn.create {% endtrans %}</button>
            </div>
        </div>

    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/order/js/order.js') }}"></script>
{% endblock %}