{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">Home</a></li>
        <li class="active">Apply for edit Shop</li>
    </ol>

    <h1>Petición de modificación de la tienda: <b>{{ shop.id }}</b></h1>

    <form action="#" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >
        <table class="table table-hover table-list-search" style="width: 80%; margin-left: 10%;">
            <thead>
                <tr>
                    <th>Attribute</th>
                    <th>OldValue</th>
                    <th>New Value</th>
                </tr>
            </thead>

                <tr>
                    <td>Name</td>
                    <td>{{ shop.name }}</td>
                    <td>{{ form_widget(form.name) }}</td>
                </tr>
                <tr>
                    <td>Partner</td>
                    <td>{{ shop.partner }}</td>
                    <td>{{ form_widget(form.partner) }}</td>
                </tr>
                <tr>
                    <td>Phone Number1</td>
                    <td>{{ shop.phoneNumber1 }}</td>
                    <td>{{ form_widget(form.phone_number_1) }}</td>
                </tr>
                <tr>
                    <td>Phone Number2</td>
                    <td>{{ shop.phoneNumber2 }}</td>
                    <td>{{ form_widget(form.phone_number_2) }}</td>
                </tr>
                <tr>
                    <td>Fax</td>
                    <td>{{ shop.fax }}</td>
                    <td>{{ form_widget(form.fax) }}</td>
                </tr>
                <tr>
                    <td>Email 1</td>
                    <td>{{ shop.email1}}</td>
                    <td>{{ form_widget(form.email_1) }}</td>
                </tr>
                <tr>
                    <td>Email 2</td>
                    <td>{{ shop.email2}}</td>
                    <td>{{ form_widget(form.email_2) }}</td>
                </tr>
                {# <tr>
                    <td>Country</td>
                    <td>{{ shop.country }}</td>
                    <td>{{ form_widget(form.country) }}</td>
                </tr> #}
                <tr>
                    <td>Region</td>
                    <td>{{ shop.region }}</td>
                    <td>{{ form_widget(form.region) }}</td>
                </tr>
                <tr>
                    <td>Province</td>
                    <td>{{ shop.province }}</td>
                    <td>{{ form_widget(form.province) }}</td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td>{{ shop.address }}</td>
                    <td>{{ form_widget(form.address) }}</td>
                </tr>
                <tr>
                    <td>Postal Code</td>
                    <td>{{ shop.postalCode }}</td>
                    <td>{{ form_widget(form.postal_code, { 'attr': {'type': 'number', 'required': 'required', 'min': '0' } }) }}</td>
                </tr>
                <tr>
                    <td colspan="3"><button class="btn btn-primary pull-right" type="submit">Submit</button></td>
                </tr>
            </tbody>

        </table>

        {{ form_rest(form) }}
    </form>

{% endblock %}