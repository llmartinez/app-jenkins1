{% if sentences|length > 0  %}

    <table class="table table-hover table-list-search" style="width: 90%; margin-left: 5%;">
        <thead>
            <tr>
                <th>{{ 'code'|trans }}</th>
                <th>{{ 'name'|trans }}</th>
                <th></th>
                {% if country == 'none' %}<th>{{ 'country'|trans }}</th>{% endif %}
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for sentence in sentences %}
            <tr>
                <td>{{ sentence.id       }}</td>
                <td>{{ sentence.name|length > 50 ? sentence.name|slice(0, 50) ~ '...' : sentence.name  }}</td>
                <td>{% if sentence.active == false %}<span class="label label-danger">{{ 'inactive'|trans }}</span>{% endif %}</td>
                {% if country == 'none' %}<td>{{ sentence.country|trans }}</td>{% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path("sentence_edit", { 'id':sentence.id }) }}"><img class="img_icon" src="{{ asset('bundles/util/images/icon/pencil.png') }}"> </a>
                    </td>
                {% endif %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
        {% include 'UtilBundle:Pagination:pagination.html.twig' %}
{% else %}
    {{ 'any.sentence'|trans }}
{% endif %}


{% block javascripts %}

    <script src="{{ asset('bundles/util/js/util.js') }}"></script>
    <script src="{{ asset('bundles/util/js/pagination.js') }}"></script>

{% endblock %}