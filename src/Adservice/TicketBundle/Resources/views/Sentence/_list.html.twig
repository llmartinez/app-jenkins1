{% if sentences|length > 0  %}

    <table class="table table-hover table-list-search" style="width: 90%; margin-left: 5%;">
        <thead>
            <tr>
                <th>{% trans %} code    {% endtrans %}</th>
                <th>{% trans %} name    {% endtrans %}</th>
                <th>{% trans %}         {% endtrans %}</th>
                {% if country == 'none' %}<th>{% trans %} country {% endtrans %}</th>{% endif %}
                <th>{% trans %} actions {% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for sentence in sentences %}
            <tr>
                <td>{{ sentence.id       }}</td>
                <td>{{ sentence.name }}</td>
                <td>{% if sentence.active == false %}<span class="label label-danger">{% trans %} inactive {% endtrans %}</span>{% endif %}</td>
                {% if country == 'none' %}<td>{{ sentence.country }}</td>{% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path("sentence_edit", { 'id':sentence.id }) }}"><img class="img_icon" src="{{ asset('bundles/util/images/icon/pencil.png') }}"> </a>
                    </td>
                {% endif %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
        {% include 'UtilBundle:Pagination:pagination.html.twig' %}
{% else %}
    {% trans %} any.sentence {% endtrans %}
{% endif %}


{% block javascripts %}

    <script src="{{ asset('bundles/util/js/util.js') }}"></script>
    <script src="{{ asset('bundles/util/js/pagination.js') }}"></script>

{% endblock %}