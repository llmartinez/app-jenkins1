{% extends '::layout.html.twig' %}

{% block body %}
    
    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">Home</a></li>
      <li><a href="{{ path('ticketWorkshopList') }}">List of Workshops</a></li>
      <li class="active">Tickets form Workshop</li>
    </ol>


    {% if workshop.tickets|length > 0  %}
        
            <table class="table table-hover" style="width: 50%; margin-left: 450px;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ticket Title</th>
                        <th>Importance</th>
                        <th>Owner</th>
                        <th>Assigned</th>
                        <th>Assign</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in workshop.tickets %}
                        <form action="{{ path("ticketsFromWorkshop", { 'id_workshop':workshop.id }) }}" method="post" >
                            <tr>
                                <td>{{ ticket.id }}</td>
                                <td>{{ ticket.title }} </td>
                                <td>{{ ticket.importance}}</td>
                                <td>{{ ticket.owner }}</td>
                                <td>{{ ticket.assignedTo }}</td>
                                <td>
                                    <select class="combobox" id="id_user" name="id_user">
                                        <option value="null">Sin asignar...</option>
                                        {% for user in workshop.users %}
                                            {% if ticket.assignedTo == user %}
                                                <option selected="selected" value={{ user.id }} >{{ user }}</option>
                                            {% else %}
                                                <option value={{ user.id }}>{{ user }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </td>
                                <td>
                                    <input type="hidden" name="id_ticket" value={{ ticket.id }}>
                                    <button type="submit" class="btn btn-primary" id="submitAssingTickets">Asignar</button>
                                </td>
                            </tr> 
                        </form>
                    {% endfor %}
                </tbody>
            </table>
       
    {% else %}
        No hay tickets!!
    {% endif %}

{% endblock %}