{% extends "TicketBundle:Default:ticket.html.twig" %}

{% block content %}

    <h3>Tickets</h3>
    
    <div>
        <p> <a class="btn btn-primary " href="{{ path('newTicket') }}">Nuevo Ticket</a></p>
    </div>
    
    <div class="tblContainer">
        <table class="table table-striped table-bordered">
        {% if tickets | length == 0 %}
            <fieldset>No tienes ningun ticket.</fieldset>
        {% else %}
            {% for ticket in tickets %}
            <tr>    
                <td>
                    <p>Titulo:  {{ ticket.title }} </p>
                    <p>Taller:  {{ ticket.user.username }} </p>
                    <p>Fecha:  {{ ticket.dateCreated | date("d-m-Y") }} </p>
                    <a class="btn btn-primary pull-right" href="{{ path('editTicket', { 'id_ticket': ticket.id }) }}">Editar</a>
                </td>
            </tr>
            {% endfor %}
        </table>
        {% endif %}
    </div>    
{% endblock %}