
    <legend>{{ 'ticket_info'|trans }}</legend>

    <legend>{{ 'description'|trans }}</legend>
        <p> {{ ticket.description|nl2br }} </p>

        {% if is_granted('ROLE_ASSESSOR') %}
        {% if ticket.assignedTo != "" %}    <p><b>{{ 'assigned_to'|trans }}: </b> {{ ticket.assignedTo }} </p>{% endif %}

            {% include 'TicketBundle:Ticket:edit_ticket_info.html.twig' %}

            <div class="col-xs-12 col-md-12 margined"> {% else %} <div> {% endif %}

            <legend>{{ 'solution'|trans }}</legend>
            {{ form_widget(form.solution, { 'attr': {'class': 'form-control'} }) }}

        {% if not is_granted('ROLE_ASSESSOR') %}
            <div id="sol_other">
                <label> {{ 'description'|trans }} </label>
                 <div class="error">
                     {% for flashMessage in app.session.flashbag.get('error') %}
                         {{ flashMessage }}
                     {% endfor %}
                     <span>
                         {% for flashMessage in app.session.flashbag.get('span') %}
                             {{ flashMessage }}
                         {% endfor %}
                     </span>
                 </div>
                <input type="text" id="sol_other_txt" name="sol_other_txt" class="form-control" value="{{message}}">
            </div>
        {% endif %}
        </div>

        {{ form_rest(form) }}

        <button class="btn btn-primary pull-right btn100" type="submit"><img class="img_icon" src="{{ asset('bundles/util/images/icon/ticket_send.png') }}"> {{ 'btn.close'|trans }} </button>