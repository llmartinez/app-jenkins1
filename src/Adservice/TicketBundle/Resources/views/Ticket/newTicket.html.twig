{% extends "TicketBundle:Default:ticket.html.twig" %}

{% block content %}

    <h3>Nuevo Ticket</h3>
    
    <div class="container">
        <div class="row">

            <div class="col-sm-8 contact-form">
                <form action="{{ path('newTicket') }}" id="contact" class="form" role="form" method="post">
                    <div class="row">
                        
                        <input type="hidden" id="user" name="user" value="{{ app.security.getToken().getUser().getId() }}">
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Titulo {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder': "Introduce Titulo"} }) }}
                        </div>
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Importancia {{ form_widget(form.importance, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div>
                        <div class="col-xs-6 col-md-6 form-group">    
                            Marca 
                            <select class="form-control" id="idBrand" name="brand"><option value=0>Selecciona Marca..</option>
                                
                                {% for brand in brands %} <option value="{{ brand.id }}"> {{ brand }} </option>  {% endfor %}
                            </select>
                            Modelo
                            <select class="form-control" id="idModel" name="model"><option value=0>Selecciona Modelo..</option></select>
                            Version
                            <select class="form-control" id="idVersion" name="version"><option value=0>Selecciona Version..</option></select>
                        </div>
                         <div class="col-xs-6 col-md-6 form-group">
                             
                             Año<input type="text" placeholder="Introduce Año" class='form-control' id='year' name='year'>
                             
                             Bastidor<input type="text" placeholder="Introduce Bastidor" class='form-control' id='vin' name='vin'>
                             
                             Matricula<input type="text" placeholder="Introduce Matricula" class='form-control' id='plateNumber' name='plateNumber'>
                        </div>
                        </div>
                         <div class="form-group">    
                             Desc <textarea class='form-control' id='message' name='message' rows=5></textarea>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-12 col-md-12 form-group">
                            <button class="btn btn-primary pull-right" type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
{% endblock %}
    
  