{% extends "TicketBundle:Default:ticket.html.twig" %}

{% block content %}

    <h3>Edita Ticket</h3>
    
    <div class="tblContainer">
        <div class="row">

            <div class="col-sm-8 contact-form">
                <form action="{{ path('editTicket', { 'id_ticket': ticket.id }) }}" id="contact" class="form" role="form" method="post">
                    <div class="row">
                             
                        <input type="hidden" id="asesor" name="asesor" value="{{ app.security.getToken().getUser().getId() }}">
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Taller <select class="form-control" id="user" name="user"><option value=0>Selecciona Taller..</option>
                                
                            {% for user in users %} <option 
                                                        {% if ticket.owner == user %} selected="true" {% endif %}
                                                        value="{{ user.id }}"> {{ user }} </option> 
                            {% endfor %}
                                
                            </select>
                        </div>
                        
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Titulo {{ form_widget(form.title, { 'attr': {'class': 'form-control' } }) }}
                        </div>
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Estado {{ form_widget(form.status, { 'attr': {'class': 'form-control' } }) }}
                        </div>
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Importancia {{ form_widget(form.importance, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Marca 
                            <select class="form-control" id="user" name="brand"><option value=0>Selecciona Marca..</option>
                                
                                {% for brand in brands %} 
                                        <option value="{{ brand.id }}" 
                                            {% if ticket.car.version.model.brand.id == brand.id %}selected="selected"{% endif %}
                                        > 
                                        {{ brand }} </option>  
                                {% endfor %}
                            </select>
                            Modelo
                            <select class="form-control" id="user" name="model"><option value=0>Selecciona Modelo..</option>
                                
                                {% for model in models %} 
                                        <option value="{{ model.id }}" 
                                            {% if ticket.car.version.model.id == model.id %}selected="selected"{% endif %}
                                        >
                                        {{ model }} </option>  
                                {% endfor %}
                            </select>
                            Version
                            <select class="form-control" id="user" name="version"><option value=0>Selecciona Version..</option>
                                
                                {% for version in versions %} 
                                        <option value="{{ version.id }}" 
                                            {% if ticket.car.version.id == version.id %}selected="selected"{% endif %}
                                        > 
                                        {{ version }} </option>  
                                {% endfor %}
                            </select>
                        </div>
                         <div class="col-xs-6 col-md-6 form-group">
                             
                             Año<input type="text" placeholder="Introduce Año" class='form-control' id='year' name='year' value="{{ ticket.car.year }}">
                             
                             Bastidor<input type="text" placeholder="Introduce Bastidor" class='form-control' id='vin' name='vin' value="{{ ticket.car.vin }}">
                             
                             Matricula<input type="text" placeholder="Introduce Matricula" class='form-control' id='plateNumber' name='plateNumber' value="{{ ticket.car.plateNumber }}">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-12 col-md-12 form-group">
                            <button class="btn btn-primary pull-right" type="submit">Submit</button>
                            <a class="btn btn-primary pull-right" href="{{ path('listTicket') }}">Cancelar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
{% endblock %}