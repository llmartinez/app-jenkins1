{% extends "TicketBundle:Default:ticket.html.twig" %}

{% block content %}

    <h3>Edita Ticket</h3>
    
    <div class="tblContainer">
        <div class="row">

            <div class="col-sm-8 contact-form">
                <form action="{{ path('editTicket', { 'id_ticket': ticket.id }) }}" id="contact" class="form" role="form" method="post">
                    <div class="row">
                             
                        <input type="hidden" id="asesor" name="asesor" value="{{ app.security.getToken().getUser().getId() }}">
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Taller <select class="form-control" id="user" name="user"><option value=0>Selecciona Taller..</option>
                                
                            {% for user in users %} <option 
                                                        {% if ticket.user == user %} selected="true" {% endif %}
                                                        value="{{ user.id }}"
                                                    > {{ user }} </option> 
                            {% endfor %}
                                
                            </select>
                        </div>
                        
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Titulo {{ form_widget(form.title, { 'attr': {'class': 'form-control' } }) }}
                        </div>
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Estado {{ form_widget(form.status, { 'attr': {'class': 'form-control' } }) }}
                        </div>
                        
                        <div class="col-xs-6 col-md-6 form-group">    
                            Importancia {{ form_widget(form.importance, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-12 col-md-12 form-group">
                            <button class="btn btn-primary pull-right" type="submit">Submit</button>
                            <a class="btn btn-primary pull-right" href="{{ path('listTicket') }}">Cancelar</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
{% endblock %}