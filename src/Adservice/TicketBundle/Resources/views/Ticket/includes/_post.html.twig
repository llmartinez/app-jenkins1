
	{# DATOS POST #}
	<legend
		{% if post.created_by == app.security.getToken().getUser() %}
				 style="background: azure;"> <a style="color:black; text-decoration:none; padding-left:20px;">Tu</a>
        {% else %}
	             class="legend">
	             	{% if post.created_by.roles[0] == 'ROLE_ADMIN' 		 %} Admin
	                {% elseif post.created_by.roles[0] == 'ROLE_ASSESSOR' %} Assessor
	                {% else %} 										    User 	{% endif %}
																		{{ post.created_by.name }}
        {% endif %}
        <a style="color:gray; float:right; text-decoration:none;"> {{ post.created_at | date("H:i (d/m/y) ") }} </a>
	</legend>

	{# CONTENT POST #}
	<div class="colDer"> <p> {{ post.message }} </p> </div>

    <div class="colIzq">
        {% if post.document is not null %}
            <img class="imgPost" src="{{ asset('uploads/tickets/' ~ post.getTicket.id ~ '/' ~ post.id ~ '/' ~ post.document.path ) }}">
        {% endif %}
    </div>