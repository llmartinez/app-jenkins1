
    <legend>{% trans %} ticket {% endtrans %} #{{ ticket.id }} {% include 'TicketBundle:Includes:_assign_btn.html.twig'   %} </legend>

    	{% if ( is_granted('ROLE_ASSESSOR')) %}
	    	{% if ticket.assignedTo != "" %}<p><b>{% trans %} ticket.assigned_to {% endtrans %}:</b> {{ ticket.assignedTo }} </p>{% endif %}

    		{% if ticket.blockedBy  == null  or ticket.blockedBy != app.security.getToken().getUser() %}

				{% if ticket.importance  != "" %}{% include 'TicketBundle:Ticket:show_ticket_info.html.twig' %}{% endif %}

			{% elseif ticket.blockedBy == app.security.getToken().getUser() %}

				{% include 'TicketBundle:Ticket:edit_ticket_info.html.twig'	%}
				{{ form_rest(form) }}
		 	{% endif %}
		{% endif %}

	    <legend>{% trans %} description {% endtrans %}</legend>
	    <p> {{ ticket.description|nl2br }} </p><br>

		{% if ticket.status == 'closed' %}
		    <legend>{% trans %} solution {% endtrans %}</legend>
		    <p> {{ ticket.solution|nl2br }} </p><br>
		{% endif %}

    	{% if ( is_granted('ROLE_ASSESSOR')) %}

    		<input type="hidden" id="role" value="ROLE_ASSESSOR">

    		{% if ticket.blockedBy  == null  or ticket.blockedBy != app.security.getToken().getUser() %}

            	{% include 'TicketBundle:Post:show_posts.html.twig'     	%}

			{% elseif ticket.blockedBy == app.security.getToken().getUser() %}

				{% include 'TicketBundle:Post:show_last_post.html.twig'   	%}
			 	{% include 'TicketBundle:Post:reply.html.twig'  			%}

			{% endif %}
		{% else %}
    			<input type="hidden" id="role" value="ROLE_USER">
            	{% include 'TicketBundle:Post:show_posts.html.twig'      	%}

			{% if ticket.blockedBy == null %}
			 	{% include 'TicketBundle:Post:reply.html.twig'  			%}
		 	{% endif %}
		{% endif %}

