
{% if workshop.id         != "" %}
	<legend>{{ 'workshop'|trans }}

			{# {% if is_granted('ROLE_ASSESSOR')%}
				<a href="{{ path('workshop_edit', { 'id': workshop.id }) }}">
					<img class='img_icon' src='{{ asset('bundles/util/images/icon/pencil.png') }}'
						 title="{{ 'edit'|trans }}" alt="{{ 'edit'|trans }}"></a>{% endif %} #}

			{% if workshop.test == 1 %}
				<img class='img_icon' src='{{ asset('bundles/util/images/icon/test.png') }}'
					 title="{{ 'testing'|trans }}" alt="{{ 'testing'|trans }}">{% endif %}

			{% if adsplus.id is defined %}
				<img class='img_icon' src='{{ asset('bundles/util/images/icon/adsplus.png') }}'
					 title="{{ 'adsplus'|trans }}" alt="{{ 'adsplus'|trans }}">{% endif %}


			<a class="btn btn-primary fr asr_form-control asr_btn"
			    {% if action is defined and action == 'showTicket' %}onclick="window.close()"
		    	{% else %}
			    	 href="{% if is_granted('ROLE_ASSESSOR') and not is_granted('ROLE_ADMIN') %}{{ path("listTicket", { 'option': 'assessor_pending'}) }}{% else %}{{ path('listTicket') }}{% endif %}"
			    {% endif %} >

				<img class="img_icon" src="{{ asset('bundles/util/images/icon/back_.png') }}" title ="{{ 'ticket_return'|trans }}" alt="{{ 'ticket_return'|trans }}"> {{ 'ticket_return'|trans }}
			</a>
	</legend>

	<input type="hidden" id="id_workshop" name="id_workshop" value="{{ workshop.id }}">

	{% for flashMessage in app.session.flashbag.get('error') %}
		<p class="grid-full w100 error">{{ flashMessage }}</p>
	{% endfor %}

	<div class="grid-full w100">
		{# WORKSHOP #}
		<div class="grid-full w50" {% if workshop.name != "" %}title="{{workshop.name}}" alt="{{workshop.name}}"{% endif %}>
			<img class='img_icon' src='{{ asset('bundles/util/images/icon/workshop_.png') }}'> #{{ workshop.codePartner}} - {{ workshop.codeWorkshop }}: <b style="color:#428bca;">{{ workshop.name|length > 100 ? workshop.name|slice(0, 100) ~ '...' : workshop.name  }}</b>
		</div>

		{# MAIL #}
		<div class="grid-full w25" {% if workshop.email1 != "" %}title="{{workshop.email1}}" alt="{{workshop.email1}}"{% endif %}>
			<table>
			{% if workshop.email1 != "" %} <tr><td><img class='img_icon' src='{{ asset('bundles/util/images/icon/email.png') }}'></td><td> {{ workshop.email1 }} </td></tr>{% endif %}
			{% if workshop.email2 != "" %} <tr><td></td><td> {{ workshop.email2 }} </td></tr>{% endif %}
			</table>
		</div>

		{# CONTACTO #}
		<div class="grid-full w25" {% if workshop.contact != "" %}title="{{workshop.contact}}" alt="{{workshop.contact}}"{% endif %} >
			{% if workshop.contact      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/user.png') }}'> <b>{{ 'contact'|trans }}:  </b>{{ workshop.contact|length > 50 ? workshop.contact|slice(0, 50) ~ '...' : workshop.contact  }}  {% endif %}
		</div>
	</div>

	<div class="grid-full w100">
		{# TEL #}
		<div class="grid-full w25" {% if workshop.phoneNumber1 != "" %}title="{{workshop.phoneNumber1}}" alt="{{workshop.phoneNumber1}}"{% endif %}>
			<div style="width: 100%;">
				{% if workshop.phoneNumber1  != "" %} 	 <img class='img_icon' src='{{ asset('bundles/util/images/icon/phone.png'       ) }}'> {{ workshop.phoneNumber1  }} {% endif %}
				{% if workshop.phoneNumber2  != "" %} 	 - {{ workshop.phoneNumber2  }} {% endif %}
			</div>
			<div style="width: 100%;">
				{% if workshop.mobileNumber1 != "" %}    <img class='img_icon' src='{{ asset('bundles/util/images/icon/phone_mobile.png') }}'> {{ workshop.mobileNumber1 }} {% endif %}
				{% if workshop.mobileNumber2 != "" %}    - {{ workshop.mobileNumber2 }} {% endif %}
			</div>
		</div>

		{# LOCATION #}
		<div class="grid-full w25" {% if workshop.region != "" %}title="{{workshop.region}}" alt="{{workshop.region}}"{% endif %}>
			{% if workshop.country      != "" %}  <input type="hidden" id="id_country" value="{{workshop.country.id}}">{% endif %}
			{% if workshop.region       != "" %}  <img class='img_icon' src='{{ asset('bundles/util/images/icon/location.png') }}'>{% endif %}
			{% if workshop.city         != "" %}  {{ workshop.city|length > 30 ? workshop.city|slice(0, 30) ~ '...' : workshop.city  }}{% endif %}
			{% if workshop.postalCode   != "" %}  {% if workshop.postalCode|length < 5 %}0{% endif %}{{ workshop.postalCode }}{% endif %}
			{% if workshop.region       != "" %}, {{ workshop.region|length > 30 ? workshop.region|slice(0, 30) ~ '...' : workshop.region  }}{% endif %}
		</div>

		{# PARTNER #}
		<div class="grid-full w25" {% if workshop.partner.name != "" %}title="{{workshop.partner.name}}" alt="{{workshop.partner.name}}"{% endif %}>
			{% if workshop.partner      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/partner_.png') }}'> <b>{{ 'partner'|trans }}</b>: {{ workshop.partner|length > 15 ? workshop.partner|slice(0, 15) ~ '...' : workshop.partner  }} {% endif %}
		</div>

		{# TIPOLOGY #}
		<div class="grid-full w25" {% if workshop.typology != "" %}title="{{workshop.typology}}" alt="{{workshop.typology}}"{% endif %}>
			{% if workshop.typology      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/menu_typology_.png') }}'> <b>{{ 'typology'|trans }}</b>: {{ workshop.typology|length > 15 ? workshop.typology|slice(0, 15) ~ '...' : workshop.typology  }} {% endif %}
		</div>
	</div>

	{# CIF #}
	{# <div style="float:left;margin-bottom:5px;width: 25%;" {% if workshop.cif != "" %}title="{{workshop.cif}}" alt="{{workshop.cif}}"{% endif %}>
		{% if workshop.cif      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/cif.png') }}'> <b>{{ 'cif'|trans }}</b>: {{ workshop.cif|length > 15 ? workshop.cif|slice(0, 15) ~ '...' : workshop.cif  }} {% endif %}
	</div> #}

	<div class="w100">
	{# OBERVATIONS #}
		{% if is_granted('ROLE_ADMIN') %}
			{% set observation = workshop.observationAdmin %}
		{% elseif is_granted('ROLE_ASSESSOR') %}
			{% set observation = workshop.observationAssessor %}
		{% elseif is_granted('ROLE_USER') %}
			{% set observation = workshop.observationWorkshop %}
		{% endif %}

		<div class="form-group grid-full w50" title="{{observation}}" style="float:left;margin-bottom:5px;width: 50%;height: 40px;" {% if observation != "" %}title="{{observation}}" alt="{{observation}}"{% endif %}>
			{% if is_granted('ROLE_ASSESSOR') and workshop.conflictive == 1 %}

				<img class='img_icon' src='{{ asset('bundles/util/images/icon/exclamation.png') }}' title="{{ 'conflictive'|trans }}" alt="{{ 'conflictive'|trans }}">

			{% else %}

				<img class='img_icon' src='{{ asset('bundles/util/images/icon/info_.png') }}' title="{{ 'observations'|trans }}" alt="{{ 'observations'|trans }}">

			{% endif %}

			{% if observation != "" %}
				<b>{{ 'observations'|trans }}</b>: {{ observation|length > 200 ? observation|slice(0, 200) ~ '...' : observation  }}
			{% else %}
				{{ 'any_observation'|trans }}
			{% endif %}

			{% if is_granted('ROLE_ASSESSOR') and ticket is defined %}
	{# 			<a href="{{ path('workshop_observation', { 'id': workshop.id, 'id_ticket': ticket.id }) }}">
					<img class='img_icon' src='{{ asset('bundles/util/images/icon/pencil.png') }}'></a> #}
			{% endif %}
		</div>

		{# DIAG MACHINE #}
		<div class="grid-full w50" {% if workshop.diagnosisMachines is defined and workshop.diagnosisMachines[0] is defined %}title="{{workshop.diagnosisMachines[0].name}}" alt="{{workshop.diagnosisMachines[0].name}}"{% endif %}>
			{% if workshop.diagnosisMachines is defined and workshop.diagnosisMachines[0] is defined %}
				<img class='img_icon' src='{{ asset('bundles/util/images/icon/diagnostic_machines_.png') }}'> <b>{{ 'diagnosis_machines'|trans }}</b>:
	            {% for diag_machine in workshop.diagnosisMachines %}
	            	- {{ diag_machine.name }}
				{% endfor %}
			{% endif %}
		</div>
	</div>
{% endif %}
