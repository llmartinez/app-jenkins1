
{% if workshop.id         != "" %}
	<legend>{% trans %} workshop {% endtrans %}
			<a href="{{ path('listTicket') }}"><span class="glyphicon glyphicon-arrow-left" title="{% trans %} back {% endtrans %}"></span></a></a>
	</legend>

	<input type="hidden" id="id_workshop" name="id_workshop" value="{{ workshop.id }}">

	{# WORKSHOP #}
	<div class="form-group">
		<span class="btn-blue glyphicon glyphicon-wrench"></span> #{{ workshop.partner.codePartner}},{{ workshop.codeWorkshop }}: <b style="color:#428bca;">{{ workshop.name }}</b>
	</div>
	<div class="form-group">
		{% if workshop.contact      != "" %}<span class="btn-blue glyphicon glyphicon-user"></span> <b>{% trans %} contact {% endtrans %}:  </b>{{ workshop.contact      }}  {% endif %}
	</div>
	{# PARTNER #}
	<div class="form-group">
		{% if workshop.partner      != "" %} <span class="btn-blue glyphicon glyphicon-briefcase"></span> <b>{% trans %} partner {% endtrans %}</b>: {{ workshop.partner      }} {% endif %}
	</div>

	{# LOCATION #}
	<div class="form-group">
		{% if workshop.region       != "" %} <span class="btn-blue glyphicon glyphicon-map-marker"></span>{% endif %}
		{% if workshop.city         != "" %}  {{ workshop.city       }}{% endif %}
		{% if workshop.postalCode   != "" %}  {% if workshop.postalCode|length < 5 %}0{% endif %}{{ workshop.postalCode }}{% endif %}
		{% if workshop.region       != "" %}, {{ workshop.region     }}{% endif %}
	</div>

	{# TEL/MAIL #}
	<div class="form-group">
		{% if workshop.phoneNumber1  != "" %} 	 <span class="btn-blue glyphicon glyphicon-phone-alt"></span> {{ workshop.phoneNumber1  }} {% endif %}
		{% if workshop.movileNumber1 != "" %}    <span class="btn-blue glyphicon glyphicon-earphone" ></span> {{ workshop.movileNumber1 }} {% endif %}
		{% if workshop.email1        != "" %} <p><span class="btn-blue glyphicon glyphicon-envelope" ></span> {{ workshop.email1        }} {% endif %}</p>
	</div>

	{# OBERVATIONS #}
	<div class="form-group">
		{% if is_granted('ROLE_ADMIN') %}
			{% if workshop.observationAdmin      != "" %} <span class="btn-blue glyphicon glyphicon-pushpin"></span> <b>{% trans %} observations {% endtrans %}</b>: 	{{ workshop.observationAdmin      }} {% endif %}

		{% elseif is_granted('ROLE_ASSESSOR') %}
			{% if workshop.observationAssessor   != "" %} <span class="btn-blue glyphicon glyphicon-pushpin"></span> <b>{% trans %} observations {% endtrans %}</b>: {{ workshop.observationAssessor   }} {% endif %}

		{% elseif is_granted('ROLE_USER') %}
			{% if workshop.observationWorkshop   != "" %} <span class="btn-blue glyphicon glyphicon-pushpin"></span> <b>{% trans %} observations {% endtrans %}</b>: {{ workshop.observationWorkshop   }} {% endif %}
		{% endif %}
	</div>
{% endif %}
