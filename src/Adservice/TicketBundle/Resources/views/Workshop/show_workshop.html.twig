
{% if workshop.id         != "" %}
	<legend>{{ 'workshop'|trans }}

		{# {% if is_granted('ROLE_ASSESSOR')%}
			<a href="{{ path('workshop_edit', { 'id': workshop.id }) }}">
				<img class='img_icon' src='{{ asset('bundles/util/images/icon/pencil.png') }}'
					 title="{{ 'edit'|trans }}" alt="{{ 'edit'|trans }}"></a>{% endif %} #}

		{% if workshop.test == 1 %}
			<img class='img_icon' src='{{ asset('bundles/util/images/icon/test.png') }}'
				 title="{{ 'testing'|trans }}" alt="{{ 'testing'|trans }}">{% endif %}

		{% if adsplus.id is defined %}
			<img class='img_icon' src='{{ asset('bundles/util/images/icon/adsplus.png') }}'
				 title="{{ 'adsplus'|trans }}" alt="{{ 'adsplus'|trans }}">{% endif %}
	</legend>

	<input type="hidden" id="id_workshop" name="id_workshop" value="{{ workshop.id }}">

	{% for flashMessage in app.session.flashbag.get('error') %}
		<p class="error">{{ flashMessage }}</p>
	{% endfor %}

	{# WORKSHOP #}
	<div class="form-group" {% if workshop.name != "" %}title="{{workshop.name}}" alt="{{workshop.name}}"{% endif %}>
		<img title="{{workshop.name}}" alt="{{workshop.name}}" class='img_icon' src='{{ asset('bundles/util/images/icon/workshop_.png') }}'> #{{ workshop.codePartner}} - {{ workshop.codeWorkshop }}: <b style="color:#428bca;">{{ workshop.name|length > 15 ? workshop.name|slice(0, 15) ~ '...' : workshop.name  }}</b>
	</div>

	{# CIF #}
	{# <div class="form-group" {% if workshop.cif != "" %}title="{{workshop.cif}}" alt="{{workshop.cif}}"{% endif %}>
		{% if workshop.cif      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/cif.png') }}'> <b>{{ 'cif'|trans }}</b>: {{ workshop.cif|length > 15 ? workshop.cif|slice(0, 15) ~ '...' : workshop.cif  }} {% endif %}
	</div> #}

	{# CONTACTO #}
	<div class="form-group" {% if workshop.contact != "" %}title="{{workshop.contact}}" alt="{{workshop.contact}}"{% endif %}>
		{% if workshop.contact      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/user.png') }}'> <b>{{ 'contact'|trans }}:  </b>{{ workshop.contact|length > 15 ? workshop.contact|slice(0, 15) ~ '...' : workshop.contact  }}  {% endif %}
	</div>

	{# PARTNER #}
	<div class="form-group" {% if workshop.partner.name != "" %}title="{{workshop.partner.name}}" alt="{{workshop.partner.name}}"{% endif %}>
		{% if workshop.partner      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/partner_.png') }}'> <b>{{ 'partner'|trans }}</b>: {{ workshop.partner|length > 15 ? workshop.partner|slice(0, 15) ~ '...' : workshop.partner  }} {% endif %}
	</div>

	{# LOCATION #}
	<div class="form-group" {% if workshop.region != "" %}title="{{workshop.region}}" alt="{{workshop.region}}"{% endif %}>
		{% if workshop.region       != "" %}  <img class='img_icon' src='{{ asset('bundles/util/images/icon/location.png') }}'>{% endif %}
		{% if workshop.city         != "" %}  {{ workshop.city|length > 15 ? workshop.city|slice(0, 15) ~ '...' : workshop.city  }}{% endif %}
		{% if workshop.postalCode   != "" %}  {% if workshop.postalCode|length < 5 %}0{% endif %}{{ workshop.postalCode }}{% endif %}
		{% if workshop.region       != "" %}, {{ workshop.region|length > 15 ? workshop.region|slice(0, 15) ~ '...' : workshop.region  }}{% endif %}
	</div>

	{# TEL #}
	<div class="form-group" {% if workshop.phoneNumber1 != "" %}title="{{workshop.phoneNumber1}}" alt="{{workshop.phoneNumber1}}"{% endif %}>
		{% if workshop.phoneNumber1  != "" %} 	 <img class='img_icon' src='{{ asset('bundles/util/images/icon/phone.png'       ) }}'> {{ workshop.phoneNumber1  }} {% endif %}
		{% if workshop.phoneNumber2  != "" %} 	 - {{ workshop.phoneNumber2  }} {% endif %}
	</div>
	<div class="form-group" {% if workshop.mobileNumber1 != "" %}title="{{workshop.mobileNumber1}}" alt="{{workshop.mobileNumber1}}"{% endif %}>
		{% if workshop.mobileNumber1 != "" %}    <img class='img_icon' src='{{ asset('bundles/util/images/icon/phone_mobile.png') }}'> {{ workshop.mobileNumber1 }} {% endif %}
		{% if workshop.mobileNumber2 != "" %}    - {{ workshop.mobileNumber2 }} {% endif %}
	</div>
	{# <div class="form-group" {% if workshop.fax != "" %}title="{{workshop.fax}}" alt="{{workshop.fax}}"{% endif %}>
		{% if workshop.fax           != "" %}    <img class='img_icon' src='{{ asset('bundles/util/images/icon/phone_fax.png'   ) }}'> {{ workshop.fax           }} {% endif %}
	</div> #}

	{# MAIL #}
	<div class="form-group" {% if workshop.email1 != "" %}title="{{workshop.email1}}" alt="{{workshop.email1}}"{% endif %}>
		<table>
		{% if workshop.email1 != "" %} <tr><td><img class='img_icon' src='{{ asset('bundles/util/images/icon/email.png') }}'></td><td> {{ workshop.email1 }} </td></tr>{% endif %}
		{% if workshop.email2 != "" %} <tr><td></td><td> {{ workshop.email2 }} </td></tr>{% endif %}
		</table>
	</div>

	{# TIPOLOGY #}
	<div class="form-group" {% if workshop.typology != "" %}title="{{workshop.typology}}" alt="{{workshop.typology}}"{% endif %}>
		{% if workshop.typology      != "" %}<img class='img_icon' src='{{ asset('bundles/util/images/icon/menu_typology_.png') }}'> <b>{{ 'typology'|trans }}</b>: {{ workshop.typology|length > 15 ? workshop.typology|slice(0, 15) ~ '...' : workshop.typology  }} {% endif %}
	</div>

	{# DIAG MACHINE #}
	<div class="form-group" {% if workshop.diagnosisMachines is defined and workshop.diagnosisMachines[0] is defined %}title="{{workshop.diagnosisMachines[0].name}}" alt="{{workshop.diagnosisMachines[0].name}}"{% endif %}>
		{% if workshop.diagnosisMachines is defined and workshop.diagnosisMachines[0] is defined %}
			<img class='img_icon' src='{{ asset('bundles/util/images/icon/diagnostic_machines_.png') }}'> <b>{{ 'diagnosis_machines'|trans }}</b>:
            {% for diag_machine in workshop.diagnosisMachines %}
            	- {{ diag_machine.name|length > 15 ? diag_machine.name|slice(0, 15) ~ '...' : diag_machine.name }}
			{% endfor %}
		{% endif %}
	</div>

	{# OBERVATIONS #}
	{% if is_granted('ROLE_AD') %}
		{% set observation = workshop.observationAdmin %}
	{% elseif is_granted('ROLE_ASSESSOR') %}
		{% set observation = workshop.observationAssessor %}
	{% elseif is_granted('ROLE_USER') %}
		{% set observation = workshop.observationWorkshop %}
	{% endif %}

	<div class="form-group" {% if observation != "" %}title="{{observation}}" alt="{{observation}}"{% endif %}>
		{% if is_granted('ROLE_ASSESSOR') and workshop.conflictive == 1 %}

			<img class='img_icon' src='{{ asset('bundles/util/images/icon/exclamation.png') }}' title="{{ 'conflictive'|trans }}" alt="{{ 'conflictive'|trans }}">

		{% else %}

			<img class='img_icon' src='{{ asset('bundles/util/images/icon/info_.png') }}' title="{{ 'observations'|trans }}" alt="{{ 'observations'|trans }}">

		{% endif %}

		{% if observation != "" %}
			<b>{{ 'observations'|trans }}</b>: {{ observation|length > 15 ? observation|slice(0, 15) ~ '...' : observation  }}
		{% else %}
			{{ 'any_observation'|trans }}
		{% endif %}

		{% if is_granted('ROLE_ASSESSOR') and ticket is defined %}
{# 			<a href="{{ path('workshop_observation', { 'id': workshop.id, 'id_ticket': ticket.id }) }}">
				<img class='img_icon' src='{{ asset('bundles/util/images/icon/pencil.png') }}'></a> #}
		{% endif %}
	</div>
{% endif %}
