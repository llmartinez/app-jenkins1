{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
      <li><a href="{{ path('ticketWorkshopList') }}">{% trans %} ticket.from_workshop {% endtrans %}</a></li>
      <li class="active">{% trans %} ticket.from_workshop {% endtrans %}</li>
    </ol>


    {% if tickets|length > 0  %}

            <table class="table table-hover" style="width: 80%; margin-left: 10%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>{% trans %} description {% endtrans %}</th>
                        <th>{% trans %} created_by  {% endtrans %}</th>
                        <th>{% trans %} assign_to   {% endtrans %}</th>
                        <th>{% trans %} action      {% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in tickets %}
                         <tr>
                            <td>{{ ticket.id }}</td>
                            <td>{{ ticket.description }} </td>
                            {#<td>{{ ticket.importance}}</td>#}
                            <td>{{ ticket.createdBy }}</td>
                            <td>{{ ticket.assignedTo }}</td>
                            <td>
                                <a href="{{ path('showTicket', { 'id_ticket' : ticket.id }) }}"><span class="glyphicon glyphicon-search" title="Show ticket"></span></a>
                                <a href="{{ path('assignTicket', {'id_ticket':ticket.id})}}"   ><span class="glyphicon glyphicon-user" title="Asignar Ticket"></span></a>
                                <a href="#" title="{% trans %} ticket.delete {% endtrans %}"><span class="glyphicon glyphicon-trash" data-toggle="modal" data-target="#myModal" data-id="{{ ticket.id }}"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

    {% else %}
        {% trans %} any.ticket {% endtrans %}
    {% endif %}

{% endblock %}