{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
      <li><a href="{{ path('user_index') }}">{{ 'home'|trans }}</a></li>
{#      <li><a href="{{ path('ticketWorkshopList') }}">{{ 'ticket.from_workshop'|trans }}</a></li>#}
      <li class="active">{{ 'ticket.from_workshop'|trans }}</li>
    </ol>


    {% if tickets|length > 0  %}

            <table class="table table-hover" style="width: 90%; margin-left: 5%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ 'description'|trans }}</th>
                        <th>{{ 'created_by'|trans }}</th>
                        <th>{{ 'assigned_to'|trans }}</th>
                        <th>{{ 'action'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in tickets %}
                         <tr>
                            <td>{{ ticket.id }}</td>
                            <td>{{ ticket.description }} </td>
                            {#<td>{{ ticket.importance}}</td>#}
                            <td>{{ ticket.createdBy }}</td>
                            <td>{{ ticket.assignedTo }}</td>
                            <td>
                                <a href="{{ path('assignTicket', {'id':ticket.id})}}"   ><img class="img_icon" src="{{ asset('bundles/util/images/icon/assign_to_user.png') }}" title="{{ 'ticket.assign'|trans }}"></span></a>
                                <a href="{{ path('showTicket', { 'id' : ticket.id }) }}"><img class="img_icon" src="{{ asset('bundles/util/images/icon/ticket_show.png') }}" title="{{ 'ticket.show'|trans }}"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

    {% else %}
        {{ 'any.ticket'|trans }}
    {% endif %}

{% endblock %}