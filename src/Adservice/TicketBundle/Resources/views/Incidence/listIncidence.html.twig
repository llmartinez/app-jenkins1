{% extends "TicketBundle:Default:incidence.html.twig" %}

{% block content %}

    <h3>Incidencias</h3>
    {% if is_granted('ROLE_ADMIN') %}
    <div>
        <p> <a class="btn btn-primary " href="{{ path('newIncidence') }}">Nueva Incidencia</a></p>
    </div>
    {% endif %}
    <div class="tblContainer">
        <table class="table table-striped table-bordered">
            {% for incidence in incidences %}
            <tr>    
                <td>
                    <p><b>Titulo:</b>  {{ incidence.ticket }} -- <b>Taller:</b>  {{ incidence.ticket.user }}</p>
                    <p><b>Ultima Modificacion:</b>  {{ incidence.ticket.dateModified | date("d-m-Y")}} </p>
                    <p><b>Estado de la incidencia:</b>  {{ incidence.status }} </p>
                </td><td>    
                    <a class="btn btn-primary pull-right" href="{{ path('showIncidence', { 'id_incidence': incidence.id }) }}">Ver</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary pull-right" href="{{ path('editIncidence', { 'id_incidence': incidence.id }) }}">Editar</a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>    
{% endblock %}