<div class="MainHeader">
    <div class="span4 offset2">
    </div>
    <div class="navbar">
        <div class="navbar-inner">
            <div class="span4 offset2">
                <!-- header -->
                <table width="100%" border="0">
                    <tr>
                        <td align="left">
                        {#  
                            <h2 style="width: 322px;float: left;margin: 5px;color: white;">
                                {{ 'header.welcome'|trans }}
                            </h2>
                        #}
                            {% set url_logo = route_logo ~ '.png' %}
                            <img class="img_logo" src="{{ asset(url_logo) }}" style="margin-left: -15px;margin-right: 10px; float: left;">
                            
                            {% if app.security.getToken().getUser() != "anon." and app.security.getToken().getUser().getCategoryService() != null %}
                                {% set url_logo_catserv = route_logo ~ '_' ~ app.security.getToken().getUser().getCategoryService().getSlug() ~ '.png' %}
                                <img class="img_logo" src="{{ asset(url_logo_catserv) }}">
                            {% endif %}
                        </td>
                        
                        <td align="right" class="pull-right">
                            {% if app.user.username is defined %}

                            <!-- Split button -->
                            <div class="language fl">
                                <input type="hidden" id="data_locale" value="{{ app.request.locale }}" data-locale="{{ app.request.locale }}">
                                <img src="{{ asset('bundles/util/images/icon/language_icon.png') }}">
                                <div class="btn-group" >
                                    <button type="button" class="btn btn-default asr_slct-default" >{{ app.request.locale | trans }}</button>
                                    <button type="button" class="btn btn-default asr_btn-default dropdown-toggle" data-toggle="dropdown">
                                        <span class="caret"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu" >
                                        <li><a class="btn pull-left" href="{{ path('changeLanguage', {'lang': 'en','path': app.request.getPathInfo()}) }}">{{ 'english'|trans }}</a></li>
                                        <li><a class="btn pull-left" href="{{ path('changeLanguage', {'lang': 'es','path': app.request.getPathInfo()}) }}">{{ 'spanish'|trans }}</a></li>

                                        <li><a class="btn pull-left"  href="{{ path('changeLanguage', {'lang': 'fr','path': app.request.getPathInfo()}) }}">{{ 'french'|trans }}</a></li>

                                        <li><a class="btn pull-left"  href="{{ path('changeLanguage', {'lang': 'pt','path': app.request.getPathInfo()}) }}">{{ 'portuguese'|trans }}</a></li>
                                    </ul>
                                </div>
                            </div>
                            <!-- Split button -->
                            <div class="user fl">
                                <img src="{{ asset('bundles/util/images/icon/user_icon.png') }}">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default asr_slct-default">{{ app.security.getToken().getUser().getUsername() }}</button>
                                    <button type="button" class="btn btn-default asr_btn-default dropdown-toggle" data-toggle="dropdown">
                                        <span class="caret"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a class="btn pull-left" href="{{ path('user_index'  ) }}">   {{ 'home'|trans }}</a></li>

                                        <li><a class="btn pull-left" href="{{ path('user_profile') }}">   {{ 'menu.profile'|trans }}</a></li>
                                        {% if not is_granted('ROLE_SUPER_AD') or is_granted('ROLE_USER') %}
                                            <li><a class="btn pull-left"  href="{{ path("listTicket" ) }}">{{ 'menu.list_tickets'|trans }}</a></li>
                                        {% endif %}
                                        {% if is_granted('ROLE_ASSESSOR') and (workshop is not defined or (workshop != null and workshop.id == "") ) %}
                                            <li><a class="btn pull-left" href="{{ path("newTicket"   ) }}">{{ 'new.ticket'|trans }}</a></li>
                                        {% endif %}
                                        <li><a href="#"></a></li>
                                        <li class="divider"></li>
                                        <li><a id="logout" class="btn pull-left" href="{{ path('user_logout') }}" dats-url="{{ path('user_logout') }}">  {{ 'logout'|trans }}</a></li>
                                    </ul>
                                </div>
                            </div>
                            {% endif %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>