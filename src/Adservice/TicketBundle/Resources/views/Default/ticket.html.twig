{% extends "::layout.html.twig" %}

{% block body %}

<!-- TABLA TICKETS -->

<div class="colIzq">
    
    <select id="slct_historyTickets" class="form-control">
        
        {% if is_granted('ROLE_ASSESSOR') %}
            <option value="ignore" selected > Show not assigned tickets     </option>
            <option value="assign"          > Show assigned tickets         </option>
            <option value="all"             > Show all tickets              </option>
        {% else %}
            <option value="owner" selected  > Show your tickets             </option>
            <option value="workshop"        > Show tickets in your workshop </option>
        {% endif %}
    </select>
        
    <div class="widget stacked widget-table action-table">
    				
        <div class="widget-header">
                <i class="icon-th-list"></i>
                <h3>Tickets History</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content" >

            <table class="table table-striped table-bordered">
                
                    <thead id="ticketHead">
                        <tr>
                            <th>{% trans %} Date     {% endtrans %}</th>
                            <th>{% trans %} Workshop {% endtrans %}</th>
                            <th>{% trans %} Ticket   {% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody id="ticketBody">
                        
                    </tbody>
            </table>
        </div> <!-- /widget-content -->
    </div> <!-- /widget -->
</div>

<!-- CONTENIDO PAGINA TICKETS -->

<div class="colDer">
    {% block content %}{% endblock  %}
</div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/ticket/js/ticket.js') }}"></script>

    {# ruta para Ajax #}
    <input id='route' type='hidden' value="{{ path("showTicket", { 'id_ticket': "PLACEHOLDER" }) }}">
    <script>
        $(document).ready(function() {
            
            //carga la tabla de tickets
            var url_ajax = "{{ path("fill_tickets") }}";
            fill_tickets(url_ajax);
            
            $('#slct_historyTickets').click(function() {
                var url_ajax = "{{ path("fill_tickets") }}";
                fill_tickets(url_ajax);
            });
        });
    </script>
    
{% endblock %}