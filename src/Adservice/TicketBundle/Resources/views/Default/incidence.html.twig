{% extends "::layout.html.twig" %}

{% block body %}

<!-- TABLA INCIDENCIAS -->

<div class="colIzq">
    
    <select id="slct_historyIncidences" class="form-control">
        
        {% if is_granted('ROLE_ASSESSOR') %}
            <option value="all"             > Show all incidences              </option>
            <option value="owner" selected  > Show your incidences             </option>
        {% else %}
            <option value="workshop"        > Show incidences in your workshop </option>
        {% endif %}
    </select>
    
    <div class="widget stacked widget-table action-table">
    				
        <div class="widget-header">
                <i class="icon-th-list"></i>
                <h3>Incidence History</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content" >

            <table class="table table-striped table-bordered">
                
                <tbody id="incidenceBody">
                    
                </tbody>
            </table>
        </div> <!-- /widget-content -->
    </div> <!-- /widget -->
</div>

<!-- CONTENIDO PAGINA POSTS -->

<div class="colDer">
    {% block content %}{% endblock  %}
</div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/ticket/js/incidence.js') }}"></script>

    {# ruta para Ajax #}
    <input id='route' type='hidden' value="{{ path("showIncidence", { 'id_incidence': "PLACEHOLDER" }) }}">
    <script>
        $(document).ready(function() {
            
            //carga la tabla de tickets
            var url_ajax = "{{ path("fill_incidences") }}";
            fill_incidences(url_ajax);
            
            $('#slct_historyIncidences').click(function() {
                var url_ajax = "{{ path("fill_incidences") }}";
                fill_incidences(url_ajax);
            });
        });
    </script>
    
{% endblock %}