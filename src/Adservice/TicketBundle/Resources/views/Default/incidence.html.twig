{% extends "::layout.html.twig" %}

{% block body %}

<!-- TABLA POSTS -->

<div class="colIzq">
    <div class="widget stacked widget-table action-table">
    				
        <div class="widget-header">
                <i class="icon-th-list"></i>
                <h3>Historial de incidencias</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content" >

            <table class="table table-striped table-bordered">
                <tbody>
                    {% for incidence in incidences %}
                    <tr>
                        <td>
                            <p class="subtitle" >{{ incidence.ticket.user }} : ~ </p> 
                            <a href="{{ path('showIncidence', { 'id_incidence' : incidence.id }) }}"> 
                            {{ incidence.ticket.title | length > 50 ?  incidence.ticket.title | slice(0, 50) ~ '...' : incidence.ticket.title }}
                        </a></td>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- /widget-content -->
    </div> <!-- /widget -->
</div>

<!-- CONTENIDO PAGINA POSTS -->

<div class="colDer">
    {% block content %}{% endblock  %}
</div>
    
{% endblock %}