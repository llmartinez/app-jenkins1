
   <div class="col-xs-4 col-md-4 form-group">
        <label for="new_car_form_brand">Brand</label>
        <select id="new_car_form_brand" name="new_car_form_brand" class="form-control" multiple="multiple", required >
            {% for brand in brands %}
                <option value={{ brand.id }}
                {% if ticket.car is defined and ticket.car.brand == brand.name %} selected {% endif %}
                >{{ brand.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="col-xs-4 col-md-4 form-group">
        <label for="new_car_form_model">Model</label>
        <select id="new_car_form_model" name="new_car_form_model" class="form-control" multiple="multiple", required >
            {% for model in models %}
                <option value={{ model.id }}
                {% if ticket.car is defined and ticket.car.model == model.name %} selected {% endif %}
                >{{ model.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="col-xs-4 col-md-4 form-group">
        <label for="new_car_form_version">Version</label>
        <select id="new_car_form_version" name="new_car_form_version" class="form-control" multiple="multiple" >
            {% for version in versions %}
                <option value={{ version.id }}
                {% if ticket.car is defined and ticket.car.version == version.name %} selected {% endif %}
                >{{ version.name }}</option>
            {% endfor %}
        </select>
    </div>
    {% include 'TicketBundle:Includes:_rest_car.html.twig' %}