{% extends '::layout.html.twig' %}

{% block body %}
    {# Definicion de la ruta al listado para usar en paginacion #}
    {% set route = 'car_list' %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{{ 'home'|trans }}</a></li>
        <li class="active">{{ 'menu.list_cars'|trans }}</li>
    </ol>

    <div style="width: 90%; margin-left: 5%;">

        <legend>{{ 'menu.list_cars'|trans }}
            <span class="pull-right mr15">{{ 'menu.list_cars'|trans }}: {{length}}</span>
        </legend>

        {% for flashMessage in app.session.flashbag.get('alert') %}
            <p class="alert">{{ flashMessage }}</p>
        {% endfor %}

        <div class="grid w30 form-group pd0">
            <div class="col-xs-5 col-md-5 form-group" style=" padding-right: 0px; margin-top: 21px; margin-left: -25px;">
                <input type="text" id="flt_search_field" name="flt_search_field" class='form-control' placeholder="{{ 'plate_number'|trans }}" value="{% if matricula is not null %}{{ matricula }}{% endif %}">
            </div>
            <div class="col-xs-1 col-md-1 form-group pd0" style="width:46px; margin-top:20px;">
                <a type="button" id="btn_search_field" name="btn_search_field" class='btn btn-primary'><img class="img_icon" src="{{ asset('bundles/util/images/icon/search_btn.png') }}"></a>
            </div>
            <div class="col-xs-1 col-md-1 form-group" style="width:46px; margin-top:20px;">
                <a type="button" id="btn_clear" name="btn_clear" class='btn btn-primary'><img class="img_icon" src="{{ asset('bundles/util/images/icon/update_.png') }}" title ="{{ 'btn.clear'|trans }}" alt="{{ 'btn.clear'|trans }}"></a>
            </div>
        </div>
    </div>
    {% include 'CarBundle:Car:_list.html.twig'  %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/util/js/pagination.js') }}"></script>
    <script src="{{ asset('bundles/car/js/car_filter.js') }}"></script>
{% endblock %}