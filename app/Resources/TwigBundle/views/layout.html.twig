<!DOCTYPE html>
<html>
{% if app.user is not defined %}
    <script>window.open('{{ path("_login") }}', '_self'); </script>
{% else %}
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{% block title %}{{ 'There was an error'|trans }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/util/css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/util/css/bootstrap.css') }}">
        {% endblock %}
        {% block favicon %}<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />{% endblock %}
    </head>
  <body id="MainBody">

        {% block header %}
            <div class="MainHeader">
                <div class="span4 offset2">
                </div>
                <div class="navbar">
                    <div class="navbar-inner">
                        <div class="span4 offset2">
                            <!-- header -->
                            <table width="100%" border="0">
                                <tr>
                                    <td align="left">
                                        {# <h2 style="width: 322px;float: left;margin: 5px;color: white;">{% trans %} header.welcome {% endtrans %}</h2> #}
                                        {% set url_logo = route_logo ~ '.png' %}
                                        <img class="img_logo" src="{{ asset(url_logo) }}" style="margin-left: -15px;margin-right: 10px; float: left;">

                                        {% if app.user != null and app.user.getCategoryService() != null %}
                                            {% set url_logo_catserv = route_logo ~ '_' ~ app.user.getCategoryService().getSlug() ~ '.png' %}
                                            <img class="img_logo" src="{{ asset(url_logo_catserv) }}">
                                        {% endif %}
                                    </td>
                                    <td align="right"></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}

        <div id="MainContent" style="text-align: center">
            {% block titleException %}{% endblock %}
            {% block exception %}{% endblock %}
        </div>

        <footer id="MainFooter">
            {% block footer %}
                {% include '::footer.html.twig'%}
            {% endblock %}
        </footer>

        {% block javascripts %}{% endblock %}
    </body>
{% endif %}
</html>