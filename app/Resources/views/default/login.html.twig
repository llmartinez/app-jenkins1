{% extends '::layout.html.twig' %}

{% block breadcrumbs %}
	<li><a href="{{ path("login") }}">{{ 'login'|trans }}</a></li>
	<li><a href="{{ path("help") }}">{{ 'help'|trans }}</a></li>
{% endblock %}

{% block body %}
	{% if error %}
	    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	    {#
	        {% for flashMessage in app.session.flashbag.get('info')  %} <div class="errorMessage ok tc">{{ flashMessage }}</div>{% endfor %}
        	{% for flashMessage in app.session.flashbag.get('error') %} <div class="errorMessage ko tc">{{ flashMessage }}</div>{% endfor %}
	    #}
	{% endif %}

	<form action="{{ path('login') }}" method="post">
	    <label for="username">{{ 'Username' |trans }}:</label>
	    <input type="text" id="username" name="_username" value="{{ last_username }}" />

	    <label for="password">{{ 'Password' |trans }}:</label>
	    <input type="password" id="password" name="_password" />

	    {#
	        If you want to control the URL the user
	        is redirected to on success (more details below)
	        <input type="hidden" name="_target_path" value="/account" />
	    #}

	    {# CSRF Protection #}
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

	    <button type="submit">{{ 'login' |trans }}</button>
	</form>

{% endblock %}