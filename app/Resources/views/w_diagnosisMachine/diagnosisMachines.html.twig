{% extends '::layout.html.twig' %}
{% set locale = app.request.locale %}

{% block breadcrumbs %}
    <li><a href="{{ path("index", { '_locale': locale }) }}">{{ 'index'|trans }}</a></li>
    <li><a href="{{ path("diagnosisMachines") }}">{{ 'diagnosisMachines'|trans }}</a></li>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">

            <h2>{{ 'diagnosisMachines'|trans }}{# total items count #} ({{ pagination.getTotalItemCount }})</h2>
            <ul>
                <li><a href="{{ path("diagnosisMachine") }}">{{ 'diagnosisMachine_new'|trans }}</a></li>
            </ul>
            <div>
                <table>
                    <thead><tr>
                    {# sorting of properties based on query components #}
                       <th{% if pagination.isSorted('d.id')       %} class="sorted"{% endif %}>{{knp_pagination_sortable(pagination,'id'|trans, 'd.id') }}</th>
                       <th{% if pagination.isSorted('d.active')   %} class="sorted"{% endif %}>{{knp_pagination_sortable(pagination,'active'|trans, 'd.active') }}</th>
                       <th{% if pagination.isSorted('d.service')  %} class="sorted"{% endif %}>{{knp_pagination_sortable(pagination,'Service'|trans,'d.service')}}</th>
                       <th{% if pagination.isSorted('d.name')     %} class="sorted"{% endif %}>{{knp_pagination_sortable(pagination,'Name'|trans,'d.name') }}</th>
                    </tr></thead>
                    <tbody>
                        {% for row in pagination %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td>{{ row.id }}</td>
                            <td>{{ row.active }}</td>
                            <td>{% for service in row.service %}

                                    {{ services[service]|trans }}

                                    {% if loop.index != row.service|length %},{% endif %} 

                                {% endfor %}
                            </td>
                            <td>{{ row.name }}</td>
                            <td>
                                <a href="{{ path("diagnosisMachine", { id: row.id })}}">Edit</a>
                                <a href="{{ path("diagnosisMachineDelete", { id: row.id })}}">Delete</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div>
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
