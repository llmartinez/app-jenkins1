{% extends '::layout.html.twig' %}
{% set locale = app.request.locale %}

{% block breadcrumbs %}
    <li><a href="{{ path("index", { '_locale': locale }) }}">{{ 'index'|trans }}</a></li>
    <li><a href="{{ path("selectRole") }}">{{ 'role'|trans }}</a></li>
    <li><a href="{{ path("users", { 'role_id': role_id }) }}">{{ 'users'|trans }}</a></li>
    <li><a href="{{ path("userView", { 'id': user.id, 'role_id': role_id }) }}">{{ 'user'|trans }} {{user.username}}</a></li>
{% endblock %}

{% block body %}
	<h2>{{ 'user'|trans }} {{user.username}}</h2>

	<form action="{{form.vars.action}}" method="{{form.vars.method}}">

        <div>
            <label for="oldPassword" class="required">{{ "password_old"|trans }}</label>
            <input type="password" id="oldPassword" name="oldPassword" required="required">
        </div>

		{{ form_rest(form) }}
		
        <button type="submit">{{ "Submit"|trans }}</button>
    </form>

    <div>
                                           <p><label>{{ 'Id'             |trans }}</label> {{ user.id            }}</p>
                                           <p><label>{{ 'Username'       |trans }}</label> {{ user.username      }}</p>
        {% if user.token         != NULL %}<p><label>{{ 'Token'          |trans }}</label> {{ user.token         }}</p>
                                           <p><label>{{ 'Email1'         |trans }}</label> {{ user.email1        }}</p>{% endif %}
        {% if user.email2        != NULL %}<p><label>{{ 'Email2'         |trans }}</label> {{ user.email2        }}</p>
                                           <p><label>{{ 'Phone number1'  |trans }}</label> {{ user.phoneNumber1  }}</p>{% endif %}
        {% if user.phoneNumber2  != NULL %}<p><label>{{ 'Phone number2'  |trans }}</label> {{ user.phoneNumber2  }}</p>{% endif %}
        {% if user.mobileNumber1 != NULL %}<p><label>{{ 'Mobile number1' |trans }}</label> {{ user.mobileNumber1 }}</p>{% endif %}
        {% if user.mobileNumber2 != NULL %}<p><label>{{ 'Mobile number2' |trans }}</label> {{ user.mobileNumber2 }}</p>{% endif %}
        {% if user.fax           != NULL %}<p><label>{{ 'Fax'            |trans }}</label> {{ user.fax           }}</p>{% endif %}
        {% if user.country       != NULL %}<p><label>{{ 'Country'        |trans }}</label> {{ user.country       }}</p>{% endif %}
        {% if user.region        != NULL %}<p><label>{{ 'Region'         |trans }}</label> {{ user.region        }}</p>{% endif %}
        {% if user.city          != NULL %}<p><label>{{ 'City'           |trans }}</label> {{ user.city          }}</p>{% endif %}
        {% if user.address       != NULL %}<p><label>{{ 'Address'        |trans }}</label> {{ user.address       }}</p>{% endif %}
        {% if user.postalCode    != NULL %}<p><label>{{ 'PostalCode'     |trans }}</label> {{ user.postalCode    }}</p>{% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/user.js"></script>
{% endblock %}