{% extends '::layout.html.twig' %}
{% set locale = app.request.locale %}

{% block breadcrumbs %}
    <li><a href="{{ path("index", { '_locale': locale }) }}">{{ 'index'|trans }}</a></li>
    <li><a href="{{ path("selectRole") }}">{{ 'role'|trans }}</a></li>
    <li><a href="{{ path("users", { 'role_id': role_id }) }}">{{ 'users'|trans }}</a></li>
    <li><a href="{{ path("userNew", { 'role_id': role_id }) }}">{{ 'user'|trans }} {{ roles[role_id]|trans }}</a></li>
{% endblock %}

{% block body %}
	<h2>{{ 'user'|trans }} {{ roles[role_id]|trans }}</h2>

	<form action="{{form.vars.action}}" method="{{form.vars.method}}">

        {% if form.service is defined %} {{ form_row(form.service) }} {% endif %}

        {% if formE is defined %}{{ form_rest(formE) }}{% endif %}

		{{ form_rest(form) }}
		
        <button type="submit">{{ "Submit" | trans }}</button>
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/user.js"></script>
{% endblock %}