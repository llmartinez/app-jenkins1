{% extends '::layout.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('user_index') }}">{% trans %} home {% endtrans %}</a></li>
        <li><a href="{{ path('sentence_list') }}">{% trans %} menu.list_sentences {% endtrans %}</a></li>
        <li class="active">{% if sentence.name != '' %}{% trans %} edit.sentence {% endtrans %} ({{ sentence.name|length > 15 ? sentence.name|slice(0, 15) ~ '...' : sentence.name  }})
                           {% else                   %}{% trans %} new.sentence  {% endtrans %} {% endif %}</li>
    </ol>

    <form action="{{ path("sentence_edit", { 'id':sentence.id }) }}" method="post" {{ form_enctype(form) }} name="{{ form_name }}" >

        <div class="container">
            <legend>{% trans %} sentence {% endtrans %}</legend>

            <div class="col-xs-12 col-md-12 form-group">
                {% if app.session.hasFlash('error') %}
                    <p class="error">{{ app.session.getFlash('error') }}</p>
                {% endif %}
            </div>

            <div class="col-xs-12 col-md-12 form-group">
                <div class="col-xs-4 col-md-4 form-group">
                    <label for="adservice_ticketbundle_sentencetype_name">{% trans %} name {% endtrans %}</label>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'name' | trans } }) }}
                </div>
                <div class="col-xs-4 col-md-4 form-group">
                    <label for="adservice_ticketbundle_sentencetype_active">{% trans %} active {% endtrans %}</label>
                    {{ form_widget(form.active) }}
                </div>
            </div>
            <div class="col-xs-12 col-md-12 form-group">
                <div class="col-xs-4 col-md-4 form-group">
                    <label for="adservice_ticketbundle_sentencetype_country">{% trans %} country {% endtrans %}</label>
                    {{ form_widget(form.country, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <button class="btn btn-primary pull-right" id="btn_create" type="submit"><img class="img_icon" src="{{ asset('bundles/util/images/icon/tick.png') }}"> {% trans %} btn.send {% endtrans %}</button>
        </div>
    </form>

{% endblock %}